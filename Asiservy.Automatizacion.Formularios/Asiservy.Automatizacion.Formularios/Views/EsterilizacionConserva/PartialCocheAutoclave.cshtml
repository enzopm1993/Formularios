
@model IEnumerable<Asiservy.Automatizacion.Datos.Datos.spConsultaCocheAutoclaveEsterilizacion>
@using Newtonsoft.Json;
<style>

    /* Style the tab */
    .tab {
        overflow: hidden;
        border: 1px solid #ccc;
        background-color: #f1f1f1;
    }

        /* Style the buttons inside the tab */
        .tab button {
            background-color: inherit;
            float: left;
            border: none;
            outline: none;
            cursor: pointer;
            padding: 14px 16px;
            transition: 0.3s;
            font-size: 17px;
        }

            /* Change background color of buttons on hover */
            .tab button:hover {
                background-color: #ddd;
            }

            /* Create an active/current tablink class */
            .tab button.active {
                background-color: #ccc;
            }

    /* Style the tab content */
    .tabcontent {
        display: none;
        padding: 6px 12px;
        border: 1px solid #ccc;
        border-top: none;
    }

    .the-legend {
        border-style: none;
        border-width: 0;
        font-size: 14px;
        line-height: 20px;
        margin-bottom: 0;
        width: auto;
        padding: 0 10px;
        border: 1px solid #6d6d6d;
    }

    .the-fieldset {
        border: 1px solid #6d6d6d;
        padding: 10px;
    }

</style>
<div class="card" style="padding-right:10px;padding-bottom:10px;padding-left:10px">
    <div class="row" id="divCohesAgreg">
        <div class="col-md-12 col-sm-12">
            <div class="table-responsive">
                <br />
                <table class="table table-striped table-bordered" id="tblDataTable">
                    <thead>
                        <tr>
                            <th></th>
                            <th hidden>
                                @Html.DisplayNameFor(model => model.IdCocheAutoclave)
                            </th>
                           
                            <th>
                                @Html.DisplayNameFor(model => model.Autoclave)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Parada)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Producto)
                            </th>
                         

                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            string Json = JsonConvert.SerializeObject(item);
                            <tr>
                                <td class="text-center">
                                    <i class="fas fa-plus-circle" style="color:green;cursor:pointer" onclick="AgregarCocheAControl(@Json)"></i>
                                </td>
                                <td hidden>
                                    @Html.DisplayFor(modelItem => item.IdCocheAutoclave)
                                </td>
                                @*<td>
                                    @Html.DisplayFor(modelItem => item.Fecha)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Turno)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.OrdenFabricacion)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Lote)
                                </td>*@
                                <td>
                                    @Html.DisplayFor(modelItem => item.Autoclave)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Parada)
                                </td>
                                <td>
                                    @item.Producto.Trim()
                                </td>
                                @*<td>
                                    @Html.DisplayFor(modelItem => item.CodigoProducto)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Envase)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Observacion)
                                </td>*@

                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
    <br />
    <div id="DivNuevoDetalleEsterilizacion" hidden>
        <input type="hidden" id="idcochehide">
        <input type="hidden" id="IdDetalleControl" value="0">
        <div class="row">
            <div class="col-md-3 col-sm-12">
                <div class="form-group">
                    <label>Autoclave:</label>
                    <input type="text" id="txtAutoclave" class="form-control" disabled />
                </div>
            </div>
            <div class="col-md-3 col-sm-12">
                <div class="form-group">
                    <label>Parada:</label>
                    <input type="text" id="txtParada" class="form-control" disabled />
                </div>
            </div>
            <div class="col-md-3 col-sm-12">
                <div class="form-group">
                    <label>Producto:</label>
                    <input type="text" id="txtProducto" class="form-control" disabled />
                </div>
            </div>
            <div class="col-md-3 col-sm-12">
                <div class="form-group">
                    <label>Temperatura Inicial °C:</label>
                    <input type="number" id="txtTemperaturaInicial" class="form-control" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="tab">
                    <button class="tablinks" onclick="AbrirRegion(event, 'InicioProceso')" id="btnipro">Inicio de Procesos de Esterilización</button>
                    <button class="tablinks" onclick="AbrirRegion(event, 'CondicionesProceso')">Condiciones del Proceso de Esterilización</button>
                    <button class="tablinks" onclick="AbrirRegion(event, 'Enfriamiento')">Enfriamiento</button>
                    <button class="tablinks" onclick="AbrirRegion(event, 'HoraChequeo')">Hora de Chequeo</button>
                </div>

                <div id="InicioProceso" class="tabcontent" style="padding-bottom:10px">

                    <div class="row">
                        <div class="col-md-6 col-sm-12" style="padding-bottom:10px">
                            <fieldset class="the-fieldset">
                                <legend class="the-legend">AUTOCLAVES "VAPOR"</legend>
                                <div class="form-group">
                                    <label>Hora inicio venteo:</label>
                                    <input type="datetime-local" id="txtHoraInicioVenteoo" class="form-control" />
                                </div>

                                <div class="form-group">
                                    <label>Hora de cierre de venteo:</label>
                                    <input type="datetime-local" id="txtHoraCierreVenteo" class="form-control" />
                                </div>

                                <div class="form-group">
                                    <label>Temperatura term. digital:</label>
                                    <input type="text" id="txtTemperaturaTermDigital" class="form-control" />
                                </div>

                            </fieldset>
                        </div>

                        <div class="col-md-6 col-sm-12">
                            <fieldset class="the-fieldset">
                                <legend class="the-legend">AUTOCLAVES "SPRAY"</legend>
                                <div class="form-group">
                                    <label>Hora LLenado:</label>
                                    <input type="datetime-local" id="txtHoraLlenado" class="form-control" />
                                </div>


                                <div class="form-group">
                                    <label>Hora de inicio de calentamiento:</label>
                                    <input type="datetime-local" id="txtHoraInicioCalentamiento" class="form-control" />
                                </div>
                            </fieldset>
                        </div>
                    </div>

                </div>

                <div id="CondicionesProceso" class="tabcontent" style="padding-bottom:10px">
                    <div class="row">
                        <div class="col-md-6 col-sm-12">
                            <div class="form-group">
                                <label>Hora de inicio de esterilización:</label>
                                <input type="datetime-local" id="txtHoraInicioEsterilizacion" class="form-control" />
                            </div>
                        </div>

                        <div class="col-md-6 col-sm-12">
                            <div class="form-group">
                                <label>Hora final de esterilización:</label>
                                <input type="datetime-local" id="txtHoraFinalEsterilizacion" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3 col-sm-12" style="padding-bottom:10px">
                            <fieldset class="the-fieldset">
                                <legend class="the-legend">Panel(Auto-Spray)(Auto-Convencional)"</legend>
                                <div class="form-group">
                                    <label>Inicio:</label>
                                    <input type="number" id="txtPanelInicio" class="form-control" />
                                </div>

                                <div class="form-group">
                                    <label>Medio:</label>
                                    <input type="number" id="txtPanelMedio" class="form-control" />
                                </div>

                                <div class="form-group">
                                    <label>Final:</label>
                                    <input type="number" id="txtPanelFinal" class="form-control" />
                                </div>
                            </fieldset>
                        </div>
                        <div class="col-md-3 col-sm-12" style="padding-bottom:10px">
                            <fieldset class="the-fieldset">
                                <legend class="the-legend">Chart</legend>
                                <div class="form-group">
                                    <label>Inicio:</label>
                                    <input type="number" id="txtChartInicio" class="form-control" />
                                </div>

                                <div class="form-group">
                                    <label>Medio:</label>
                                    <input type="number" id="txtChartMedio" class="form-control" />
                                </div>

                                <div class="form-group">
                                    <label>Final:</label>
                                    <input type="number" id="txtChartFinal" class="form-control" />
                                </div>
                            </fieldset>
                        </div>
                        <div class="col-md-3 col-sm-12" style="padding-bottom:10px">
                            <fieldset class="the-fieldset">
                                <legend class="the-legend">Termómetro digital</legend>
                                <div class="form-group">
                                    <label>Inicio:</label>
                                    <input type="number" id="txtTermometroDigitalInicio" class="form-control" />
                                </div>

                                <div class="form-group">
                                    <label>Medio:</label>
                                    <input type="number" id="txtTermometroDigitalMedio" class="form-control" />
                                </div>

                                <div class="form-group">
                                    <label>Final:</label>
                                    <input type="number" id="txtTermometroDigitalFinal" class="form-control" />
                                </div>
                            </fieldset>
                        </div>
                        <div class="col-md-3 col-sm-12" style="padding-bottom:10px">
                            <fieldset class="the-fieldset">
                                <legend class="the-legend">Presión Manómetro</legend>
                                <div class="form-group">
                                    <label>Inicio:</label>
                                    <input type="number" id="txtPresionManometroInicio" class="form-control" />
                                </div>

                                <div class="form-group">
                                    <label>Medio:</label>
                                    <input type="number" id="txtPresionManometroMedio" class="form-control" />
                                </div>

                                <div class="form-group">
                                    <label>Final:</label>
                                    <input type="number" id="txtPresionManometroFinal" class="form-control" />
                                </div>
                            </fieldset>
                        </div>
                    </div>
                </div>

                <div id="Enfriamiento" class="tabcontent" style="padding-bottom:10px">
                    <div class="row">
                        <div class="col-md-6 col-sm-12">
                            <div class="form-group">
                                <label>Tiempo de enfriamiento:</label>
                                <input type="datetime-local" id="txtTiempoEnfriamiento" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-12">
                            <div class="form-group">
                                <label>Temperatura producto a la salida::</label>
                                <input type="number" id="txtTemperaturaProductoSalida" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>
                <div id="HoraChequeo" class="tabcontent" style="padding-bottom:10px">
                    <div class="row">
                        <div class="col-md-4 col-sm-12">
                            <div class="form-group">
                                <label>Inicio:</label>
                                <input type="datetime-local" id="txtHoraChequeoInicio" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-12">
                            <div class="form-group">
                                <label>Medio:</label>
                                <input type="datetime-local" id="txtHoraChequeoMedio" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-12">
                            <div class="form-group">
                                <label>Final:</label>
                                <input type="datetime-local" id="txtHoraChequeoFinal" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <div class="row">
            <div class=" col-12 text-center">
                <button class="btn btn-primary" type="button" disabled hidden id="btnCargandoDet">
                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                    Espere...
                </button>
                <button data-toggle="tooltip" data-placement="top" title="Guardar" class="btn" id="btnGuardarDetalleControl" onclick="GuardarDetalleEsterilizacion()" style="border-color:#2c3e50" type="button">
                    <img style="width:100%" src="~/Content/icons/save20.png" />
                </button>
                <button data-toggle="tooltip" data-placement="top" title="Limpiar" class="btn" id="btnLimpiarDetalleControl" onclick="LimpiarControlesDetalle()" style="border-color:#2c3e50" type="button">
                    <img style="width:100%" src="~/Content/icons/clear24.png" />
                </button>
                <button data-toggle="tooltip" data-placement="top" title="Eliminar" class="btn" id="btnEliminarDetalleControl" onclick="ConfirmarELiminarDetalleControl()" style="border-color:#2c3e50" type="button" disabled>
                    <img style="width:100%" src="~/Content/icons/cancel24.png" />
                </button>
            </div>
        </div>
        <br />
    </div>
    
</div>

