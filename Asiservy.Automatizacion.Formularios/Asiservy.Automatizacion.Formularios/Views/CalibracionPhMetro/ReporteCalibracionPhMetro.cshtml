
@{
    ViewBag.Title = "ReporteCalibracionPhMetro";
}
<style>
    @@media print and (color) {
        * {
            -webkit-print-color-adjust: exact;
       
        }
        #wrapper #content-wrapper {
            background-color: white;
        }

        .card-header {
            background-color: white;
        }

        .card-footer {
            background-color: white;
        }
        #tablaDatos td {
            font-size: 0.6rem;
        }

        #tablaDatos th {
            font-size: 0.6rem;
        }
        #DivBotonImpr {
            display: none;

        }

        #espacio {
            display: none;
        }

        #accordionSidebar {
            display: none;
        }

        #titulo {
            display: none;
        }

        #divfiltros {
            display: none;
        }

        #DivCard {
            border: none;
        }
        #estadocontrol1 {
            padding-right: 0.6em;
            padding-left: 0.6em;
            border-radius: 10rem;
            color: #fff;
            background-color: #e74a3b;
         
        }
       

        #estadocontrol {
            padding-right: 0.6em;
            padding-left: 0.6em;
            border-radius: 10rem;
            color: #fff;
            background-color: green;
           
        }
    }
    @@media screen{
        #estadocontrol1 {
            padding-right: 0.6em;
            padding-left: 0.6em;
            border-radius: 10rem;
            color: #fff;
            background-color: #e74a3b;
         
        }

        #estadocontrol {
            padding-right: 0.6em;
            padding-left: 0.6em;
            border-radius: 10rem;
            color: #fff;
            background-color: green;
        }
        #cab1{
            display:none;
        }
        #cab2{
            display:none
        }
        .card {
            box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
            transition: 0.3s;
            width: 100%;
            padding-top: 10px;
            padding-bottom: 10px;
            padding-left: 10px;
            padding-right: 10px;
        }

        .selectbox {
            background: #fff;
            color: #1d3b4a;
            padding: 5px 8px;
            line-height: 18px;
            border-radius: 4px;
            border-width: 0 1px 4px;
            cursor: pointer;
            border: 1px solid #ddd;
        }
        #tablaDatos td{
            font-size:0.6rem;
        }
        #tablaDatos th {
            font-size: 0.6rem;
        }
    }
    
</style>

<div class="row" id="titulo">
    <div class="col-12  text-md-left text-center">
        <h4 style="float:left;">Reporte Calibración PhMetro</h4>
        <div class="col-md-3 col-12 col-sm-12 float-right text-right">
            @if (ViewBag.Link == null)
            {
                <a style="text-decoration:underline;" href="@ViewBag.Link" class="form-label disabled">Ir al Control</a>
            }
            else
            {<a style="text-decoration:underline;" href="@ViewBag.Link" class="form-label">Ir al Control</a>}
        </div>
    </div>
</div>
<div class="card">
    <div class="row" id="divfiltros">
        <div class="col-md-5 col-sm-7 form-group" id="divDateRangePicker">
            <label>Filtrar por Fecha:</label>
            <input type="hidden" id="fechaDesde" value="" />
            <input type="hidden" id="fechaHasta" value="" />
            <div id="reportrange" class="selectbox">
                <i class="fa fa-calendar"></i>&nbsp;
                <span></span> <i class="fa fa-caret-down" style="float:right"></i>
            </div>
        </div>
        <div class="col-md-5 col-sm-2">
            <label>Acciones</label>
            <div class="form-group">
                <button data-toggle="tooltip" data-placement="top" title="Consultar" class="btn" id="Nuevo" onclick="ConsultarReporte()" style="border-color:#2c3e50" type="button">
                    <img style="width:100%" src="~/Content/icons/ver24.png" />
                </button>
            </div>
        </div>
    </div>

</div>
<center><h4 id="Mensaje" class="text-warning" hidden>No se encontraron registros</h4></center>
<div class="card" id="DivCard" hidden>
    <div id="DivReportePartial" class="table-responsive">

    </div>
</div>
