<!-- Modal -->
<div class="modal fade" id="ModalEditarProyeccion" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" data-backdrop="static" aria-hidden="true">
    <div class="modal-dialog" style="max-width:600px" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Editar</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <input type="text" value="@ViewBag.IdProyeccion" id="idproyeccionmodal" hidden />
            <div class="modal-body">
                
                <div id="DivBodyEditar">
                    <div class="row">
                        <input type="hidden" name="name" id="txtIdProgramacion" value="0" />
                        <div class="col-12">
                            <div class="form-group" id="form">
                                <label>Líneas: </label> <br />
                                @foreach (var item in ViewBag.Lineas)
                                {
                                    <label class="btn btn-dark text-xs-center" id="Label-@item.Codigo">
                                        @item.Descripcion
                                        <input type="checkbox" id="Linea-@item.Codigo" value="@item.Descripcion" class="" />
                                    </label>
                                }                             
                                <label id="msgerrorLineas" hidden class="text-danger">Debe ingresar al menos una línea</label>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label>Hora Inicio: </label> 
                                <input type="time" class="form-control" id="txtHoraInicio" value=""/>
                                <label id="msgerrorHoraInicio" hidden class="text-danger">La hora de inicio no puede estar vacia</label>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label class="align-left">Hora Fin:</label>
                                <input type="time" class="form-control" id="txtHoraFin" value="" />
                                <label id="msgerrorHoraFin" hidden class="text-danger">La hora de Fin no puede estar vacia</label>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group">
                                <label class="align-left">Observación:</label><textarea rows="5" cols="25" id="observacionedit" class="form-control"></textarea>
                                @*<label id="msgerrorHoraFin" style="display:none; color:red">La hora de Fin no puede estar vacia</label>*@
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group">

                                <label id="msgerrorHoras" style="display:none; color:red">La hora de inicio no puede ser mayor a la hora Fin</label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                    <button type="button" class="btn btn-primary" id="btnGuardar" onclick="GuardarProyeccionDetalle()">Guardar</button>
                </div>
            </div>

        </div>
    </div>
</div>

