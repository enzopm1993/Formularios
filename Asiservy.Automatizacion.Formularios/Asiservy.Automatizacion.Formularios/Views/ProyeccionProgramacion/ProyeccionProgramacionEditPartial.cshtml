@model List<Asiservy.Automatizacion.Formularios.Models.ProyeccionProgramacion.ProyeccionProgramacionViewModel>


<table class="table table-hover" id="tblDataTable" style="cursor: pointer">
    <thead>
        <tr>
            <th>
                Lote
            </th>
            <th>
                Toneladas
            </th>
            <th>
                Destino
            </th>
            <th>
                Tipo Limpieza
            </th>
            <th>
                Especie
            </th>
            <th>
                Talla
            </th>
            <th>
                Observación
            </th>

            <th>
                Líneas
            </th>
            <th>
                Hora Inicio
            </th>
            <th>
                Hora fin
            </th>
            <th>
                Acción
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Lote
                </td>
                <td>
                    @item.Tonelada
                </td>
                <td>
                    @item.Destino
                </td>
                <td>
                    @item.TipoLimpieza
                </td>
                <td>
                    @item.Especie
                </td>
                <td>
                    @item.Talla
                </td>
                <td>
                    @item.Observacion
                </td>
                <td>@item.Lineas</td>
                <td>@item.HoraInicio</td>
                <td>@item.HoraFin</td>
                <td>
                    <a href="#" onclick="AbrirModal('@item.IdProyeccion','@item.Observacion','@item.Lineas','@item.HoraInicio','@item.HoraFin');">Editar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script src="~/Scripts/General/dataTableJS.js"></script> 