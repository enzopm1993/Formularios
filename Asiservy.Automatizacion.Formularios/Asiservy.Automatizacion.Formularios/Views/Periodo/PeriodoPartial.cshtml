@model IEnumerable<Asiservy.Automatizacion.Datos.Datos.PERIODO>


<table class="table-hover table-bordered table-striped table" style="cursor: pointer" id="tblDataTable">
    <thead>
        <tr>
            <th>
                <label>Id</label>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaDesde)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaHasta)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaIngresoLog)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UsuarioIngresoLog)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TerminalIngresoLog)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaModificacionLog)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UsuarioModificacionLog)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TerminalModificacionLog)
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr onclick="SeleccionPeriodo('@item.IdPeriodo','@item.Descripcion','@item.Estado','@item.FechaDesde.ToString("yyyy-MM-dd")','@item.FechaHasta.ToString("yyyy-MM-dd")')">
            <td>
                @Html.DisplayFor(modelItem => item.IdPeriodo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @item.FechaDesde.ToString("dd-MM-yyyy")
            </td>
            <td>
                @item.FechaHasta.ToString("dd-MM-yyyy")
                
            </td>
            <td>
                @if (item.Estado == "B")
                {
                <label>Bloqueado</label>
                } else {

                <label>Abierto</label>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaIngresoLog)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UsuarioIngresoLog)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TerminalIngresoLog)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaModificacionLog)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UsuarioModificacionLog)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TerminalModificacionLog)
            </td>

        </tr>
        }
    </tbody>
</table>

<script src="~/Scripts/General/dataTableJS.js"></script> 