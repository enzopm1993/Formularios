@model Asiservy.Automatizacion.Formularios.Models.SolicitudPermisoViewModel

@{
    ViewBag.Title = "SolicitudPermiso";
}


<script src="~/Scripts/jquery-ui.js"></script>
<link href="~/Content/jquery-ui.css" rel="stylesheet" />
<script src="~/Scripts/gijgo/combined/gijgo.min.js"></script>
<link href="~/Content/gijgo/combined/gijgo.min.css" rel="stylesheet" />
<link href="~/Content/SolicitudPermisoCss/SolicitudPermiso.css" rel="stylesheet" />
<script src="~/Scripts/Mensajes/Mensajes.js"></script>
<style>
    input, select, textarea {
        max-width: 100%
    }
</style>
<br />
<div style="padding:0 5% 5% 5%" class="container-fluid">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-">
            <h4>Solicitud de Permiso General</h4>
            <label>Fecha: @DateTime.Now.ToShortDateString()</label>
        </div>
    </div>

    <div class="row">

        <div class="col-md-2"></div>
        <div class="col-md-8 col-sm-12 border border-secondary">
            @using (Html.BeginForm("SolicitudPermiso", "SolicitudPermiso"))
            {
                <div class="row">

                    <div class="col-md-4 col-sm-12">
                        @Html.LabelFor(m => m.DescripcionLinea)
                        @Html.DropDownListFor(m => m.CodigoLinea, new SelectList(ViewBag.Lineas, "Codigo", "Descripcion"), new { @onchange = "CambioDepartamento(this.value)", @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.CodigoLinea, "", new { @class = "input-validation-error text-danger has-error" })

                    </div>

                    <div class="col-md-4 col-sm-12">
                        @Html.LabelFor(m => m.DescripcionArea)
                        @Html.DropDownListFor(m => m.CodigoArea, new SelectList(ViewBag.Areas, "Codigo", "Descripcion"), new { @onchange = "CambioArea(this.value)", @class = "form-control", @id = "selectArea" })
                        @Html.ValidationMessageFor(m => m.CodigoArea, "", new { @class = "input-validation-error text-danger has-error" })
                    </div>

                    <div class="col-md-4 col-sm-12">
                        @Html.LabelFor(m => m.DescripcionCargo)
                        @Html.DropDownListFor(m => m.CodigoCargo, new SelectList(ViewBag.Cargos, "Codigo", "Descripcion"), new { @class = "form-control", @id = "selectArea" })
                        @Html.ValidationMessageFor(m => m.CodigoCargo, "", new { @class = "input-validation-error text-danger has-error" })
                    </div>
                </div>
                <div class="row">

                    <div class="col-md-4 col-sm-12">
                        @Html.TextBox("Identificacion", "1313687194", new { @hidden = "hidden" })
                        @Html.TextBox("CodigoDiagnostico", "0", new { @hidden = "hidden" })
                        @Html.TextBox("CodigoClasificador", "0", new { @hidden = "hidden" })
                        <label>Empleado</label>
                        <div class="ui-widget" id="comp1">
                            <select id="combobox">
                                <option value="">Select one...</option>
                                <option value="Anchundia Anchundia Aura Maria">Anchundia Anchundia Aura Maria</option>
                                <option value="Anchundia Parrales Viviana">Anchundia Parrales Viviana</option>
                                <option value="Bailon Mero María Ines">Bailon Mero María Ines</option>
                                <option value="Bravo Mnzaba Betsy Janet">Bravo Mnzaba Betsy Janet</option>
                                <option value="Cardenas Espinoza Patricia">Cardenas Espinoza Patricia</option>
                                <option value="Espinal Delgado Joyce Maryeli">Espinal Delgado Joyce Maryeli</option>
                                <option value="García Cedeño Mariuxi Katherine">García Cedeño Mariuxi Katherine</option>
                                <option value="Intriago Sornoza Mayra Johana">Intriago Sornoza Mayra Johana</option>
                                <option value="Jaramillo Gómez María Elizabeth">Jaramillo Gómez María Elizabeth</option>
                                <option value="Macias Chancay Sandy Ismenia">Macias Chancay Sandy Ismenia</option>
                                <option value="Moreira Zambrano Mercedes">Moreira Zambrano Mercedes</option>
                                <option value="Posligua Santana Francisca">Posligua Santana Francisca</option>
                                <option value="Quijano Moreira Emily Juliana">Quijano Moreira Emily Juliana</option>
                                <option value="Reyes Raamirez Jessenia Katehrine">Reyes Raamirez Jessenia Katehrine</option>
                                <option value="Rezabala Suarez Jova Alexandra">Rezabala Suarez Jova Alexandra</option>
                                <option value="Silvia Indio Mariana Gabriela">Silvia Indio Mariana Gabriela</option>
                                <option value="Valencia Ochoa Gema Jhael">Valencia Ochoa Gema Jhael</option>
                                <option value="Vera Intriago Diana Gabriela">Vera Intriago Diana Gabriela</option>
                                <option value="Zambrano Solorzano Nury Juana">Zambrano Solorzano Nury Juana</option>
                            </select>
                        </div>

                    </div>

                    <div class="custom-control custom-radio">
                        @Html.LabelFor(m => m.CodigoMotivo, new { @class = "" })
                        @Html.DropDownListFor(m => m.CodigoMotivo, new SelectList(ViewBag.MotivosPermiso, "CodigoMotivo", "Descripcion"), new { @class = "form-control", @id = "selectMotivo" })
                        @Html.ValidationMessageFor(m => m.CodigoMotivo, "", new { @class = "input-validation-error text-danger has-error" })

                    </div>
                </div>


                <div class="form-group">
                    @Html.LabelFor(m => m.Observacion)
                    @Html.TextAreaFor(m => m.Observacion, new { @class = "form-control" })
                </div>
                @Html.ValidationMessage("CustomError", "", new { @class = "input-validation-error text-danger has-error" })
                <div class="row">
                    <div class="col-md-2 col-sm-1">
                        <div class="custom-control custom-switch">
                            <input type="checkbox" class="custom-control-input" id="switchHoraFecha" onchange="CambioHoraFecha();">
                            <label class="custom-control-label" for="switchHoraFecha">Fecha/Hora</label>
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-12">
                        <label>Fecha</label>
                        @Html.TextBoxFor(m => m.FechaSalidaEntrada, new { @type = "date", @id = "dateSalidaRegreso", @class = "form-control", @readonly = "readonly" })
                    </div>
                    <div class="col-md-3 col-sm-5">
                        <label>Hora Salida</label>
                        @Html.TextBoxFor(m => m.HoraSalida, new { @type = "time", @id = "timeHoraSalida", @class = "form-control", @readonly = "readonly" })
                        @*<input class="form-control" type="time" name="name" value="" id="timeHoraDesde" readonly />*@
                    </div>
                    <div class="col-md-3  col-sm-5">
                        <label>Hora Regreso</label>
                        @Html.TextBoxFor(m => m.HoraRegreso, new { @type = "time", @id = "timeHoraRegreso", @class = "form-control", @readonly = "readonly" })
                        @*<input class="form-control" type="time" name="name" value="" id="timeHoraHasta" readonly />*@
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 col-sm-12">
                        <label>Fecha Salida</label>
                        @Html.TextBoxFor(m => m.FechaSalida, new { @type = "date", @id = "dateSalida", @class = "form-control" })
                        @*<input class="form-control" type="date" name="name" value="" id="datetimeDesde" />*@
                    </div>
                    <div class="col-md-6 col-sm-12">
                        <label>Fecha Regreso</label>
                        @Html.TextBoxFor(m => m.FechaRegreso, new { @type = "date", @id = "dateRegreso", @class = "form-control" })

                    </div>
                </div>
                <br />
                <center><input type="submit" class="btn btn-info" name="name" value="Generar" onclick="Guardar()" /></center>
                <br />
            }
        </div>
        <div class="col-md-2"></div>
    </div>


</div>
<div id="ModalMensaje"> </div>
<br /><br />
<script src="~/Scripts/SolicitudPermisoJS/SolicitudPermiso.js"></script>