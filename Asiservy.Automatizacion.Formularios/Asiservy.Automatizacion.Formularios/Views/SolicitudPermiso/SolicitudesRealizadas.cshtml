

@model List<Asiservy.Automatizacion.Formularios.Models.SolicitudPermisoViewModel>

@{
    ViewBag.Title = "Solicitudes realizadas";
}

<style>
    input, select, textarea {
        max-width: 100%
    }
</style>

<h3>Solicitudes realizadas</h3>


<div class="table-responsive">
    <table class="table-hover table-bordered table-striped table" style="cursor: pointer" id="tblDataTable">
        <thead>
            <tr>
                <th>

                </th>
                <th>#</th>
                <th>Motivo</th>
                <th>Observación</th>
                <th>Fecha desde</th>
                <th>Fecha hasta</th>
                <th>Estado</th>
                <th>Usuario crea</th>
                <th>Fecha creación</th>
                @*<th>Acción</th>*@
            </tr>
        </thead>
        <tbody style="font-size:14px">
            @if (Model != null)
            {
                foreach (var m in Model)
                {
                <tr>
                    <td></td>
                    <td>@m.IdSolicitudPermiso</td>
                    <td>@m.DescripcionMotivo</td>
                    <td>@m.Observacion</td>
                    <td>@m.FechaSalida</td>
                    <td>@m.FechaRegreso</td>
                    <td>@m.DescripcionEstadoSolicitud</td>
                    <td>@m.UsuarioIngresoLog</td>
                    <td>@m.FechaIngresoLog</td>

                    @*<td style="width:20%">
                        <button data-toggle="tooltip" data-placement="top" title="Mostrar" class="btn iconStyle" id="Nuevo" onclick="Mostrar(@m.IdSolicitudPermiso)" style="border-color:#2c3e50" type="button">
                            <i class="fas fa-search"></i>
                        </button>                   
                    </td>*@
                </tr>
                }
            }
        </tbody>
    </table>
</div>

@*<script src="~/Scripts/General/dataTableJS.js"></script>*@



