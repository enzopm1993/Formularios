@model IEnumerable<Asiservy.Automatizacion.Formularios.Models.SolicitudPermisoViewModel>
<link href="~/Content/css/select2.min.css" rel="stylesheet" />
@{
    ViewBag.Title = "BandejaMedico";
}
<style>
    input, select, textarea {
        max-width: 100%
    }
</style>


<h2 >Bandeja Médica</h2>

<br />
<div id='result'> </div>

<div class="table-responsive">
    <table class="table-hover table-bordered table-striped table" style="cursor: pointer" id="tblDataTable">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.IdSolicitudPermiso)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.DescripcionLinea)
                </th>


                <th>
                    @Html.DisplayNameFor(model => model.Identificacion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NombreEmpleado)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.DescripcionMotivo)
                </th>


                <th>Acción</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.IdSolicitudPermiso)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.DescripcionLinea)
                        </td>


                        <td>
                            @Html.DisplayFor(modelItem => item.Identificacion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NombreEmpleado)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.DescripcionMotivo)
                        </td>






                        <td>
                            <button data-toggle="tooltip" data-placement="top" title="Ver" class="btn iconStyle" id="" onclick="Mostrar(@item.IdSolicitudPermiso)" style="border-color:#2c3e50" type="button">
                                <i class="fas fa-search"></i>
                            </button>
                            <button data-toggle="tooltip" data-placement="top" title="Enviar" class="btn iconStyle btn-link" id="" onclick="ValidarMedico(@item.IdSolicitudPermiso)" style="border-color:#2c3e50" type="button">
                                <i class="fas fa-check"></i>
                            </button>
                            @*<input type="button" onclick="Mostrar(@item.IdSolicitudPermiso)" name="name" value="Ver" class="btn btn-link" />
                                <input type="button" onclick="ValidarMedico(@item.IdSolicitudPermiso)" name="name" value="Aprobar" class="btn btn-link" />*@
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<br />

<div class="modal fade" id="ModalAprobacion" data-backdrop="static">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Solicitud Permiso</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="modal_body">

            </div>

        </div>
    </div>
</div>

<script src="~/Scripts/General/GeneralJS.js"></script>