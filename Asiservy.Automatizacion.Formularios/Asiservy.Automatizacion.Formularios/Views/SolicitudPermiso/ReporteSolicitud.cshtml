
@{
    ViewBag.Title = "ReporteSolicitud";
}

<div class="container-fluid">
    <h4>Reporte de Solicitudes</h4>
    
    <div class="row">
        <div class="form-group col-md-4 col-sm-12">
            <label>Departamento</label>
            <select class="form-control">
                <option value="value">Produccion</option>
                <option value="value">Dispensario Médico</option>
                <option value="value">RRHH</option>
            </select>
        </div>
        <div class="form-group col-md-4 col-sm-12">
            <label>Area</label>
            <select class="form-control">
                <option value="value">Proceso</option>
                <option value="value">Lata</option>
                <option value="value">Pouch</option>
            </select>
        </div>
    </div>


    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Solicitud</th>
                    <th>Departamento</th>
                    <th>Area</th>
                    <th>Empleado</th>
                    <th>Estado</th>
                    <th>Biometrico</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>Produccion</td>
                    <td>Proceso L1</td>
                    <td>Anchundia Lopez José</td>
                    <td>Salida: Aprobado</td>
                    <td><input class="form-control" type="datetime" name="name" value="@DateTime.Now" /></td>
                    </tr>
            </tbody>
        </table>

    </div>



</div>



