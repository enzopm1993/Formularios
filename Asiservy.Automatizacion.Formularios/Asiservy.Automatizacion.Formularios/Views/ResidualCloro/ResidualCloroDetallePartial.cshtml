@model IEnumerable<Asiservy.Automatizacion.Datos.Datos.spConsultaResidualCloroDetalle>
@using Newtonsoft.Json;


<table class="table table-striped">
    <tr>      
        <th>
            @Html.DisplayNameFor(model => model.Pediluvio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cantidad)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>

        <td>
            @Html.DisplayFor(modelItem => item.Pediluvio)
        </td>
        <td>
            @if (item.Cantidad < 200)
            {
                <span class="badge badge-danger">@item.Cantidad</span>
            }
            else
            {
                <span class="badge badge-success">@item.Cantidad</span>
            }
        </td>
        <td>
            @{string json = JsonConvert.SerializeObject(item); }
            <button class="btn btn-link" onclick="EditarResidualCloroDetalle(@json)">Editar</button>
            |
            <button class="btn btn-link" onclick="EliminarResidualCloroDetalle(@json)">Eliminar</button>
        </td>
    </tr>
    }

</table>
