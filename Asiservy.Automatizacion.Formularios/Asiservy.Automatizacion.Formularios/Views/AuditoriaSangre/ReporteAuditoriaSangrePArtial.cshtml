@model List<Asiservy.Automatizacion.Datos.Datos.spReporteAuditoriaSangre>

<table class="table table-hover" id="TablaAuditoriaSangreRpt">
    <thead>
        <tr>
            <th>
                Cédula
            </th>
            <th>
                Nombres
            </th>
            <th>
                Veces
            </th>
        </tr>
       
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var color = item.Veces == 1 ? "transparent" : item.Veces == 2 ? "#F7F266" : "#F9866E";
        <tr style="background-color:@color">
            <td>
                @item.Cedula
            </td>
            <td>
                @item.NOMBRES
            </td>
            <td>
                @item.Veces
            </td>
        </tr>
       
        }
    </tbody>
</table>

<script>

    $('#TablaAuditoriaSangreRpt').DataTable({
        "language": {
            "sProcessing": "Procesando...",
            "sLengthMenu": "Mostrar _MENU_ registros",
