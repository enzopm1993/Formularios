@model List<Asiservy.Automatizacion.Datos.Datos.spConsultarAuditoriaSangreDiaria>
@using Newtonsoft.Json;
<table class="table-hover table-bordered table-striped table" style="cursor: pointer" id="tblDataTable">
    <thead>
        <tr>
            <th>
                Hora
            </th>
            <th>
                Cédula
            </th>
            <th>
                Nombres
            </th>
            <th>
                Línea
            </th>

            <th>
                Porcentaje
            </th>
            <th>
                Tipo
            </th>
            <th>
                Observación
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            string json = JsonConvert.SerializeObject(item);
        <tr onclick="CargarAuditoria(@json)">
            <td>

                @item.Hora
            </td>
            <td>
                @item.Cedula
            </td>
            <td>
                @item.Nombres
            </td>
            <td>
                @item.Linea
            </td>

            <td>
                @item.Porcentaje% &nbsp;
                @if (item.Porcentaje > 1)
                {
                    <i class="fas fa-arrow-circle-up" style="background:#ff0000; border-radius:10px"></i>
                }
            </td>
            <td>
                @item.TipoAuditoria
            </td>
            <td>
                @item.Observacion
            </td>
        </tr>
        }
    </tbody>
</table>

