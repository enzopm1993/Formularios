
@model IEnumerable<Asiservy.Automatizacion.Datos.Datos.spConsultaCocheAutoclave>
@using Asiservy.Automatizacion.Datos.Datos;
@using Newtonsoft.Json;


<div class="card" style="padding-right:10px;padding-bottom:10px;padding-left:10px">
    <div class="row" id="divCohesAgreg">
        <div class="col-md-12 col-sm-12">
            <div class="table-responsive">
                <br />
                <table class="table table-striped table-bordered" id="tblDataTable">
                    <thead>
                        <tr>
                            <th></th>
                            <th hidden>
                                @Html.DisplayNameFor(model => model.IdCocheAutoclave)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.Autoclave)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Parada)
                            </th>
                         
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            string Json = JsonConvert.SerializeObject(item);
                            <tr>
                                <td class="text-center">
                                    <i class="fas fa-plus-circle" style="color:green;cursor:pointer" onclick="AgregarCocheAControl(@Json)"></i>
                                </td>
                                <td hidden>
                                    @Html.DisplayFor(modelItem => item.IdCocheAutoclave)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Autoclave)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Parada)
                                </td>
                            
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>


</div>


