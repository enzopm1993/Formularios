@model List<Asiservy.Automatizacion.Datos.Datos.DETALLE_PRODUCTO_POUCH_CUARENTENA>
@using Newtonsoft.Json;
<table class="table table-striped table-bordered">
    <thead>
        <tr class="text-center">
            <th>Pallet</th>
            <th>Hora Inicio</th>
            <th>Hora final</th>
            <th colspan="3">Acción</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @{ 
                    string json = JsonConvert.SerializeObject(new {item.IdDetalleProdPouchCuarentena,item.Pallet,item.HoraInicio,item.HoraFin});
                }
                <td>@item.Pallet</td>
                <td>@item.HoraInicio</td>
                <td>@item.HoraFin</td>
                <td class="text-center">
                    <i class="fas fa-list" style="color:blue; cursor:pointer" onclick="AbrirModalSubDetalle(@json)"></i>
                </td>
                <td class="text-center">
                    <i class="fas fa-edit" style="color:green; cursor:pointer" onclick="ModificarDetalle(@json)"></i>
                </td>
                <td class="text-center">
                    <i class="fas fa-trash-alt" style="color:red; cursor:pointer" onclick="ConfirmarEliminarDetalle(@json)"></i>
                </td>
            </tr>
        }
    </tbody>
</table>
