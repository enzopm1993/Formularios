@model IEnumerable<Asiservy.Automatizacion.Datos.Datos.sp_CloroCisternaDescongelado>

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>ReporteCloroCisternaDescongelado</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="itemFilter">
        <label style="font-size:15px" id="lblFechaDesde">Fecha Desde:&nbsp;&nbsp;@ViewBag.filtroFechaDesde.ToString("dd-MM-yyyy")</label>
        <label style="font-size:15px" id="lblFechaHasta">&nbsp;&nbsp;Hasta:&nbsp;&nbsp;@ViewBag.filtroFechaHasta.ToString("dd-MM-yyyy")</label>
    </div>
    <table class="table table-bordered">
        <thead style="font-size:18px">
            <tr>
                <th>
                    FECHA
                </th>
                <th>
                    HORA
                </th>
                <th>
                    PPM CLORO
                </th>
                <th>
                    CISTERNA
                </th>
                <th>
                    OBSERVACION
                </th>
                <th>
                    APROBADO POR
                </th>
                <th>
                    ESTADO
                </th>
            </tr>         
        </thead>
        <tbody style="font-size:16px">
            @foreach (var item in Model)
            {
                <tr style="page-break-inside: avoid;">
                    <td>
                        @item.Fecha.ToString("dd-MM-yyyy")
                    </td>
                    <td>
                        @item.HoraDet.ToString("HH:mm")
                    </td>
                    <td>
                        @if (item.Ppm_CloroDet >= 0.3M && item.Ppm_CloroDet <= 1.5M)
                        {
                            <span class="badge badge-success">@item.Ppm_CloroDet</span>
                        }
                        else
                        {
                            <span class="badge badge-danger">@item.Ppm_CloroDet</span>
                        }
                    </td>
                    <td>
                        @item.IdCisternaDet
                    </td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.ObservacionDet))
                        {
                            @item.ObservacionDet.ToUpper()
                        }
                        else {
                            @item.ObservacionDet
                        }
                    </td>
                    <td>
                        @item.AprobadoPor
                    </td>
                    <td>
                        @if (item.EstadoReporte == true)
                        {
                            <span class="badge badge-success">APROBADO</span>
                        }
                        else
                        {
                            <span class="badge badge-danger">PENDIENTE</span>
                        }
                    </td>                    
                </tr>
            }
        </tbody>
    </table>

    <div class="row">
        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-body">
                    Frecuencia: 3 horas<br />
                    Min: 0.3 ppm<br />
                    Max: 1.5 ppm
                </div>
            </div>
        </div>
    </div>
</body>
</html>