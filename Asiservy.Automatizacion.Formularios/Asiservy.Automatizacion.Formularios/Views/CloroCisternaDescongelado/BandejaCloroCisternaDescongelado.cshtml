
@{
    ViewBag.Title = "BandejaCloroCisternaDescongelado";
}


<style>
    input, select, textarea {
        max-width: 100%
    }
    .selectbox {
        background: #fff;
        padding: 5px 8px;
        line-height: 18px;
        border-radius: 4px;
        border-width: 0 1px 4px;
        cursor: pointer;
        border: 1px solid #ddd;
    }

    .btnWait {
        cursor: no-drop !important;
    }
   .white{
       white-space:normal;
   }
</style>

<h5>Bandeja Control de Cloro en Cisterna</h5>
<br />
<div class="row" id="DivFiltros">
    <div class="col-md-2 col-sm-6 form-group">
        <label>Estado</label>
        <select id="selectEstadoRegistro" class="form-control" onchange="CargarBandeja()">
            <option value="false" default>PENDIENTE</option>
            <option value="true">APROBADO</option>
        </select>
    </div>

    <div hidden class="col-md-5 col-sm-6 form-group" id="divDateRangePicker" >
        <label>Filtrar por Fecha:</label>
        <input type="hidden" id="fechaDesde" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
        <input type="hidden" id="fechaHasta" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
        <div id="reportrange" class="selectbox">
            <i class="fa fa-calendar"></i>&nbsp;
            <span></span> <i class="fa fa-caret-down"></i>
        </div>
    </div>

    <div class="col-5">
        <label>Acciones</label>
        <div class="form-group">
            <button data-toggle="tooltip" data-placement="top" title="Consultar" class="btn" id="Nuevo" onclick="CargarBandeja()" style="border-color:#2c3e50" type="button">
                <img style="width:100%" src="~/Content/icons/ver24.png" />
            </button>
        </div>
    </div>
</div>
<br />
<div id="spinnerCargando" hidden class="text-center">
    <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
        <span class="sr-only">Cargando...</span>
    </div>
</div>
<div id="divPartialControlCloro">
   
</div>

<!-- Modal -->
<div class="modal fade" id="ModalApruebaCntrolCloro" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Detalle Control Cloro en Cisterna Descongelado</h5>
                <button type="button" class="close" data-dismiss="modal" onclick="LimpiarFecha()" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="col-md-4 col-12 col-sm-12">
                    <input type="datetime-local" name="name" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" onchange="validar()" id="txtFechaAprobado" class="form-control" />
                </div>
                <br />
                <div class="table-responsive">
                    <table class="table-bordered table-striped table" style="cursor: pointer" id="tblDataTableAprobar">
                        <thead style="font-size:12px">
                            <tr>
                                <th>FECHA - HORA</th>
                                <th>PPM_CLORO</th>
                                <th>CISTERNA</th>
                                <th>USUARIO CREACION</th>
                                <th >OBSERVACION</th>
                            </tr>
                        </thead>
                        <tbody style="font-size:11px" id="acoplar"></tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                <button type="button" id="btnAprobado" hidden class="btn btn-primary" onclick="AprobarControlCloroDetalle(true)">Aprobar</button>
                <button type="button" id="btnPendiente" hidden class="btn btn-primary" onclick="AprobarControlCloroDetalle(false)">Reversar</button>
            </div>
        </div>
    </div>
</div>


