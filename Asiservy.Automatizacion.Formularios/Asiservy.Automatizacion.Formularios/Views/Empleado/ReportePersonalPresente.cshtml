
@{
    ViewBag.Title = "ReportePersonalPresente";
}
<style>
    input, select, textarea {
        max-width: 100%;
    }
</style>

<h3>Reporte de personal presente</h3>
<div class="">
    <div class="row">       
        <div class="col-md-5 col-6">
            <input type="date" class="form-control" name="name" id="txtFecha" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
            <p id="validaFecha" hidden class="text-danger">Seleccione una fecha</p>
        </div>
        <div class="col-md-2 col-6">

            @*<input type="button" id="btnGuardar" class="btn btn-primary" name="name" onclick="CargarReporteDistribucion()" value="Consultar" />*@
            <button data-toggle="tooltip" data-placement="top" title="Mostrar" class="btn" id="btnGuardar" onclick="CargarReportePersonalPresente()" style="border-color:#2c3e50" type="button">
                <img style="width:100%" src="~/Content/icons/ver24.png" />
            </button>

        </div>

    </div>
    <hr />
    <div class="d-flex justify-content-center">
        <div id="spinnerCargando" hidden class="spinner-border" style="width: 3rem; height: 3rem;" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
    <div class="row">
        <div class="table-responsive" id="DivTableReportePersonalPresente"></div>
    </div>
</div>