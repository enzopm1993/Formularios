@model Asiservy.Automatizacion.Formularios.Models.Empleado.EmpleadoEsferoViewModel

@{
    ViewBag.Title = "EmpleadoEsfero";
}
<br />
<h3>Asigna Empleado Esfero</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal container-fluid">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="row">
            <div class="offset-md-2 col-md-4 col-sm-12">
                <div class="form-group">
                    <label class="">Empleado</label>
                    @Html.DropDownListFor(model => model.Cedula, new SelectList(ViewBag.Empleados, "CEDULA", "NOMBRES"), "Selecccione", new { @class = "form-control",@id="SelectEmpleado" })
                    @Html.ValidationMessageFor(model => model.Cedula, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-md-2 col-sm-12">
                <div class="form-group">
                    @Html.LabelFor(model => model.NumeroEsfero, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.NumeroEsfero, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NumeroEsfero, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-md-2 col-sm-12">
                <div class="form-group">
                    <div class="custom-control custom-checkbox mb-3">
                        <br />
                        @Html.CheckBox("EstadoRegistro", true, new { @id = "CheckEstadoRegistro", @class = "custom-control-input", @onchange = "CambioEstadoRegistro(this.checked)" })
                        <label class="custom-control-label" for="CheckEstadoRegistro" id="LabelEstado">Estado Registro</label>
                    </div>
                </div>
            </div>

        </div>

        <div class="text-center">
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </div>

        <div id="DivTableEmpleadoEsferoPartial"></div>
    </div>
}

