
@{
    ViewBag.Title = "ReporteEmpleadoCargo";
}

<style>
    .card {
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        transition: 0.3s;
        width: 40%;
    }
        .card:hover {
            box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
        }

    .container {
        padding: 2px 16px;
    }

    .card-body {
        /* flex: 1 1 auto; */
        padding: 0.50rem;
    }
    p {
        margin-top: 0;
        margin-bottom: 0;
    }
</style>

<h4>Reporte Empleado Cargo Nómina</h4>
<label>@ViewBag.Linea</label>
<hr />


<div class="row">
    <div class="col-md-4 col-6">


        @Html.DropDownList("Lineas", new SelectList(ViewBag.Lineas, "Codigo", "Descripcion"), "Seleccione", new { @class = "form-control", @id = "selectLinea", @onchange= "CargarEmpleadoCargo()" })

    </div>
    <div class="col-md-6 col-6 text-md-left text-center">

        <button data-toggle="tooltip" data-placement="top" title="Buscar" class="btn" id="" onclick="CargarEmpleadoCargo()" style="border-color:#2c3e50" type="button">
            <img style="width:100%" src="~/Content/icons/ver24.png" />
        </button>

    </div>
</div>

<hr />

<div id="spinnerCargando" hidden class="text-center">
    <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
        <span class="sr-only">Cargando...</span>
    </div>
</div>

<div id="divTableEmpleadoCargo" class="table-responsive">

</div>

<div class="card" id="divCard" hidden style="width: 18rem;">
    <div class="card-header">
        <h5 class="card-title">Antiguedad</h5>
    </div>
    <div class="card-body">
        
        <p class="card-text"> 90> Días</p>
        <p class="card-text text-info">90< & 60> Días</p>
        <p class="card-text text-warning">60< Días</p>
    </div>
</div>
<br />