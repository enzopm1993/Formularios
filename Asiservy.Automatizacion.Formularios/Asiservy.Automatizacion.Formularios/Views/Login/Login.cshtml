@using System.Reflection
@using  Asiservy.Automatizacion.Datos.Datos
@{
    Layout = null;
    FONDO_LOGIN  fondo = (FONDO_LOGIN)ViewBag.FondoLogin;
}
<!DOCTYPE html>
<html>
<head>
    <title>Login</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Login/Login.css" rel="shortcut icon" />
    <link href="~/Content/Login/Login.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @*   <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">*@
    <link href="~/Content/Login/font-awesome.min.css" rel="stylesheet" />
    <link rel="apple-touch-icon" sizes="57x57" href="~/Content/ICO/apple-icon-57x57.png">
    <link rel="apple-touch-icon" sizes="60x60" href="~/Content/ICO/apple-icon-60x60.png">
    <link rel="apple-touch-icon" sizes="72x72" href="~/Content/ICO/apple-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="76x76" href="~/Content/ICO/apple-icon-76x76.png">
    <link rel="apple-touch-icon" sizes="114x114" href="~/Content/ICO/apple-icon-114x114.png">
    <link rel="apple-touch-icon" sizes="120x120" href="~/Content/ICO/apple-icon-120x120.png">
    <link rel="apple-touch-icon" sizes="144x144" href="~/Content/ICO/apple-icon-144x144.png">
    <link rel="apple-touch-icon" sizes="152x152" href="~/Content/ICO/apple-icon-152x152.png">
    <link rel="apple-touch-icon" sizes="180x180" href="~/Content/ICO/apple-icon-180x180.png">
    <link rel="icon" type="image/png" sizes="192x192" href="~/Content/ICO/android-icon-192x192.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/Content/ICO/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="96x96" href="~/Content/ICO/favicon-96x96.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/Content/ICO/favicon-16x16.png">
    <link rel="manifest" href="~/Content/ICO/manifest.json">
    <meta name="msapplication-TileColor" content="#ffffff">
    <meta name="msapplication-TileImage" content="~/Content/ICO/ms-icon-144x144.png">
    <meta name="theme-color" content="#ffffff">
    @if (fondo != null)
    {
    <style>
        body {
            background: url("/ImagenSiaa/@fondo.Imagen") no-repeat center center fixed;
            -webkit-background-size: cover;
              -moz-background-size: cover;
              -o-background-size: cover;
            background-size: cover;
        }
    </style>
    }
</head>
<body>
        <style>
            .btn-link:hover {
                color: #ffd800 !important;
            }

            .btn-link {
                font-weight: 400;
                color: aliceblue;
                text-decoration: none;
            }

            select {
                background: transparent;
                border: groove;
                font-size: 14px;
                height: 30px;
                padding: 5px;
                width: 250px;
                /*color: aliceblue;*/
            }
        </style>
        <div class="container relative1">
            <div class="absolute1" hidden id="response">
            </div>

            <div class="d-flex justify-content-center h-100">
                <div class="card shadow">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-5">

                                <h4 class="text-center" style="color:black">
                                    <b>@ViewBag.BD</b>
                                </h4>
                            </div>
                            <div style=" padding-top: 3px !important;" class="text-center col-md-7 col-12 col-sm-12">
                                @*<select class="" id="selectBD" onchange="CambiarAmbienteDB(this.value)"></select>*@
                                <a href="" class="" id="EnlaceBase"></a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <form>
                            <div class="input-group form-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <img style="border-radius:20px; background:#ffffff; width:80%" src="~/Content/icons/user32.png" />
                                    </span>
                                </div>
                                <input id="txtUsuario" style="text-transform:uppercase" onkeypress="return sololetras(event)" type="text" class="form-control" placeholder="Usuario">

                            </div>
                            <div class="input-group form-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        @*<i class="fas fa-key">*@
                                        <img style="border-radius:20px; background:#ffffff; width:80%" src="~/Content/icons/clave32.png" />
                                        @*</i>*@
                                    </span>
                                </div>
                                <input id="txtPassword" type="password" class="form-control" placeholder="CONTRASEÑA">
                            </div>

                            <div class="form-group text-center">

                                <button data-toggle="tooltip" data-placement="top" title="Limpiar" class="btn btn-outline-dark" id="btnNuevo" onclick="Nuevo()" style="border-color:#2c3e50" type="button">
                                    <i class="fas fa-broom"> Limpiar</i>
                                </button>
                                <button title="Ingresar" class="btn btn-outline-primary" id="btnIngresar" style="border-color:#2c3e50" type="button">
                                    <i class="fas fa-sign-in-alt"> Ingresar</i>
                                </button>

                                @*<input type="button" id="btnIngresar" value="Ingresar" class="btn float-right login_btn">*@
                                <button hidden id="btnCargando" class="btn btn-light" type="button" disabled>
                                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                                    Espere...
                                </button>
                            </div>

                            <div class="text-center">
                                <label></label>
                                <span class="badge badge-primary">V.@ViewBag.version </span>

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal -->

    </body>
</html>

<script src="~/Scripts/jquery-3.0.0.min.js"></script>
<script src="~/Scripts/Mensajes/Mensajes.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/modernizr-2.6.2.js"></script>
<script src="~/Scripts/General/GeneralJS.js"></script>
<script src="~/Scripts/Login/Login.js"></script>
