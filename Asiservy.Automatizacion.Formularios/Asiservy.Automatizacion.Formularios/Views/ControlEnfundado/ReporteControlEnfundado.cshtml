
@{
    ViewBag.Title = "ReporteControlEnfundado";
}

<h3>Reporte Control Enfundado</h3>

<div class="row">

    <div class="col-md-4 col-6">
        <label>Fecha</label>
        <input type="date" id="txtFecha" name="name" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" onchange="Consultar()" />
        <p hidden id="ValidaFecha" class="text-danger">Ingrese una Fecha</p>
    </div>
    <div class="col-md-2 col-6 col-sm-6">
        <div class="form-group">
            <label>Turno</label>
            @Html.DropDownList("selectTurno", new SelectList(ViewBag.Turno, "Codigo", "Descripcion"), "seleccione", new { @class = "form-control", @onchange = "Consultar()" })
        </div>
    </div>
    <div class="col-md-4 col-6">
        <label>Reporte</label>
        <select id="Selectreporte" onchange="Consultar()" class="form-control">
            <option value="">Seleccione</option>
            <option value="1">Control por Enfundadora</option>
            <option value="2">Control por Hora</option>
        </select>
        <p hidden id="ValidaReporte" class="text-danger">Seleccione un Reporte</p>
    </div>
    <div class="col-md-2 col-12 text-center text-md-left">
        <label>Acciones </label>

        <div class="form-group">
            <button data-toggle="tooltip" data-placement="top" title="Consultar" class="btn" id="btnConsultar" onclick="Consultar()" style="border-color:#2c3e50" type="button">
                <img style="width:100%" src="~/Content/icons/ver24.png" />
            </button>
        </div>

    </div>
</div>
<hr />
<div id="spinnerCargando" hidden class="text-center">
    <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
        <span class="sr-only">Cargando...</span>
    </div>
</div>

<div class="table-responsive" id="DivReporte">

</div>


