@model IEnumerable<Asiservy.Automatizacion.Datos.Datos.sp_Control_Lavado_Cisterna>


<table class="table table-bordered" tabindex="1" id="tblDataTable">
    <thead style="font-size:12px">
        <tr>
            <th>FECHA</th>
            <th>Nº CISTERNA</th>
            <th>QUIMICOS UTILIZADOS</th>
            <th>OBSERVACIONES</th>
            <th>CREADO POR</th>
            <th>F. CREACION</th>
            <th>PROBADO POR</th>
            <th>F. APROBACION</th>
            <th>ESTADO</th>
        </tr>
    </thead>
    @{
        var listaFiltrada = (from x in Model
                             group x by new { x.IdLavadoCisterna } into f
                             select new { f.Key.IdLavadoCisterna }).ToList();
    }
    <tbody style="font-size:11px">
        @foreach (var item in listaFiltrada)
        {
            var listaModel = (from c in Model
                              where item.IdLavadoCisterna == c.IdLavadoCisterna
                              select new
                              {
                                  c.Fecha,
                                  c.NDescripcion,
                                  c.QuimUtilizados,
                                  c.Observacion,
                                  c.UsuarioIngresoLog,
                                  c.fechaCreacion,
                                  c.AprobadoPor,
                                  c.FechaAprobado,
                                  c.EstadoReporteCab
                              }).ToList();

            <tr>
                @foreach (var subItem in listaModel)
                {
                    <td>@subItem.Fecha.ToString("dd-MM-yyyy")</td>
                    <td>@subItem.NDescripcion.ToUpper()</td>
                    <td>@subItem.QuimUtilizados.ToUpper()</td>

                    if (!string.IsNullOrEmpty(subItem.Observacion))
                    {
                        <td>@subItem.Observacion.ToUpper()</td>
                    }
                    else
                    {
                        <td></td>}
                    <td>@subItem.UsuarioIngresoLog</td>
                    <td>@subItem.fechaCreacion</td>
                    <td>
                        @if (!string.IsNullOrEmpty(subItem.AprobadoPor))
                        {
                            @subItem.AprobadoPor.ToUpper()
                        }
                    </td>

                    <td>
                        @if (subItem.EstadoReporteCab)
                        {
                            <span class="badge badge-success">APROBADO</span>
                        }
                        else
                        { <span class="badge badge-danger">PENDIENTE</span>}
                    </td>
                }

            </tr>
        }
    </tbody>
</table>
