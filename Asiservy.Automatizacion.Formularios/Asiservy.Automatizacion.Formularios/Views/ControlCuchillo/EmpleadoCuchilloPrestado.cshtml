
@{
    /**/

    ViewBag.Title = "EmpleadoCuchilloPrestado";
}
<style>
    input, select, textarea {
        max-width: 100%;
    }
</style>
<h2>Empleado Cuchillo Prestado</h2>

<div class="card shadow" id="DivCardCabecera">
    <div class="card-body">
        <div class="row">
            <div class="col-md-3 col-6">
                <div class="form-group">
                    <label>Fecha</label>
                    <input type="date" id="txtFecha" class="form-control" name="name" value="@DateTime.Now.ToString("yyyy-MM-dd")" onchange="CargarEmpleadoCuchillo()" />
                </div>
            </div>
            <div class="col-md-3 col-6">
                <div class="form-group">
                    <label>Empleado</label>
                    <select id="selectEmpleado" class="form-control"></select>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <div class="form-group">
                    <label>Cuchillo Blanco</label>
                    @Html.DropDownList("txtCuchilloBlanco",(SelectList)ViewBag.CuchilloBlanco, "Seleccione", new { @class="form-control"})
                  
                </div>
            </div>
            <div class="col-md-3 col-6">
                <div class="form-group">
                    <label>Cuchillo Rojo</label>
                    @Html.DropDownList("txtCuchilloRojo", (SelectList)ViewBag.CuchilloRojo,"Seleccione", new { @class = "form-control" })
                  
                </div>
            </div>
            <div hidden class="col-md-3 col-6">
                <div class="form-group">
                    <label>Cuchillo Negro</label>
                    @Html.DropDownList("txtCuchilloNegro", (SelectList)ViewBag.CuchilloNegro, "Seleccione", new { @class = "form-control", @hidden=true })
                  
                </div>
            </div>

        </div>
    </div>
</div>

<div class="row" style="padding-top:10px; padding-bottom:10px">
    <div class="col-12 text-center">
        <button data-toggle="tooltip" data-placement="top" title="Guardar" class="btn" id="Guardar" onclick="GuardarModificarCuchilloEmpleadoPrestado()" style="border-color:#2c3e50" type="button">
            <img style="width:100%" src="~/Content/icons/save20.png" />
        </button>
    </div>
</div>



<div class="card shadow">
    <div class="card-body">
        <div class="row">
            <div class="col-12">
                <div id="spinnerCargando" hidden class="text-center">
                    <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                        <span class="sr-only">Cargando...</span>
                    </div>
                </div>
            </div>          
        </div>
        <div id="DivTableCuchilloPrestado">

        </div>
    </div>
</div>