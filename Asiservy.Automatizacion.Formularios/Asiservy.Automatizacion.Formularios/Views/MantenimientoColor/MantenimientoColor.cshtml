@model Asiservy.Automatizacion.Datos.Datos.CC_MANTENIMIENTO_COLOR

@{
    ViewBag.Title = "MantenimientoColor";
}

<h2>Mantenimiento Color</h2>

<style>
    input, select, textarea {
        max-width: 100%;
    }
</style>

<hr />
<div class="row" id="divCabecera1">
    <div id="divDescripcion" class="col-md-4 col-12 col-sm-12">
        <div class="form-group">
            <label>Descripción del Color *</label>
            <input type="text" name="name" value="" id="txtDescripcion" class="form-control" />           
        </div>
    </div>
    <div id="divDescripcion" class="col-md-2 col-12 col-sm-12">
        <div class="form-group">           
            <label>Abreviatura *</label>
            <input type="text" name="name" value="" id="txtAbreviatura" maxlength="5" class="form-control" />
        </div>
    </div>
    <div class="col-md-2 col-12  text-md-left text-center">
        <label class="" id="lblAcciones">Acciones</label>
        <div class="form-group">
            <button data-toggle="tooltip" data-placement="top" title="Crear nuevo registro" class="btn" id="btnModalGenerarRegistro" onclick="GuardarCabecera()" style="border-color:#2c3e50" type="button">
                <img style="width:100%" src="~/Content/icons/add24.png" />
            </button>
            <button data-toggle="tooltip" data-placement="top" title="Nuevo" class="btn" id="btnNuevo" onclick="NuevoControl()" style="border-color:#2c3e50" type="button">
                <img style="width:100%" src="~/Content/icons/clear24.png" />
            </button>
        </div>
    </div>

</div>
<hr />

@*MODAL BOTON DETALLE DE HORAS*@
<div id="divMantenimientoColor" class="table-responsive">
</div>

@*MODAL ELIMINAR REGISTRO*@
<div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true" id="modalEliminarControl">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel"></h4>
                <input type="hidden" id="txtEliminarDetalle" name="name" value="" />
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-danger" onclick="EliminarCabeceraSi()" id="modal-detalle-si">Si</button>
                <button type="button" class="btn btn-outline-primary" onclick="EliminarCabeceraNo()" id="modal-detalle-no">No</button>
            </div>
        </div>
    </div>
</div>

