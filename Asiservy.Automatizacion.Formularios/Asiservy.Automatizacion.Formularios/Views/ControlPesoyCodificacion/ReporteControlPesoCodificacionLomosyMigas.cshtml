<style>
    input, select, textarea {
         max-width: 100%; 
    }
</style>
@{
    ViewBag.Title = "ReporteControlPesoCodificacionLomosyMigas";
}

<h4>Reporte Control de Peso y Codificación de Lomos y Migas</h4>

<br />
<div class="row">
    <div class="col-md-6 col-sm-6 form-group">
        <label class="">Fecha Producción:</label>
        <input type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" id="txtFecha" onchange="" class="form-control" />

    </div>
    <div class="col-md-6 col-sm-6 form-group">
        <label class="">Turno:</label>
        <select class="form-control" id="cmbTurno" onchange="">
            <option value="1">Turno 1</option>
            <option value="2">Turno 2</option>
        </select>

    </div>
    
</div>
<br />
<div class="row">
    <div class=" col-12 text-center">
        <button class="btn btn-primary" type="button" disabled hidden id="btnConsultarCargando">
            <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
            Espere...
        </button>
        <button data-toggle="tooltip" data-placement="top" title="Consultar" class="btn" id="btnConsultarReporte" onclick="ConsultarReporte()" style="border-color:#2c3e50" type="button">
            <img style="width:100%" src="~/Content/icons/ver24.png" />
        </button>
     
    </div>
</div>
<br />
<div id="DivPartialReporte" style="padding-bottom:50px" >

</div>


