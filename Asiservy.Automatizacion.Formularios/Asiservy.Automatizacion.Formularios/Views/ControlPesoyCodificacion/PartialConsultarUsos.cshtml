@model List<Asiservy.Automatizacion.Formularios.Models.ControlPesoyCodificacion.ControlUsosViewModel>
@using Newtonsoft.Json;
@if (Model != null)
{
    <table class="table table-striped table-hover" style="cursor:pointer">
        <thead>
            <tr>
                <th hidden>
                    IdDescripcionUso
                </th>
                <th hidden>
                    Código
                </th>
                <th>
                    Descripción de Uso
                </th>
                <th>
                    Cantidad
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                string json = JsonConvert.SerializeObject(item);
                <tr onclick="EditarUso(@json)">
                    <td hidden>@item.IdDescripcionUso</td>
                    <td hidden>@item.Codigo</td>
                    <td>@item.Descripcion</td>
                    <td>@item.Cantidad</td>
                </tr>
            }
        </tbody>
    </table>
}