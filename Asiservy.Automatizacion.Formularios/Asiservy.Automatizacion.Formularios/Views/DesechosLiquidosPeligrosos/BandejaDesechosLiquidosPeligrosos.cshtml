@model Asiservy.Automatizacion.Datos.Datos.sp_Control_Desechos_Liquidos_Peligrosos

@{
    ViewBag.Title = "BandejaDesechosLiquidosPeligrosos";
}

<style>
    input, select, textarea {
        max-width: 100%;
    }

    .selectbox {
        background: #fff;
        color: #1d3b4a;
        padding: 5px 8px;
        line-height: 18px;
        border-radius: 4px;
        border-width: 0 1px 4px;
        cursor: pointer;
        border: 1px solid #ddd;
    }

    .box_filters {
        float: right;
    }

    .itemFilter {
        float: left;
        margin-right: 4px;
    }

    .btnWait {
        cursor: no-drop !important;
    }

    ._bloque {
        margin-bottom: 10px;
    }

    .card {
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        transition: 0.3s;
        width: 100%;
        padding-top: 10px;
        padding-bottom: 10px;
        padding-left: 10px;
        padding-right: 10px;
    }

    fieldset {
        border: 1px solid #ddd !important;
        margin: 0;
        xmin-width: 0;
        padding: 10px;
        position: relative;
        border-radius: 4px;
        background-color: #f5f5f5;
        padding-left: 10px !important;
    }

    legend {
        font-size: 14px;
        font-weight: bold;
        margin-bottom: 0px;
        /*width: 35%;*/
        border: 1px solid #ddd;
        border-radius: 4px;
        padding: 5px 5px 5px 10px;
        background-color: #ffffff;
    }

    #lgnprod {
        width: 25%;
    }

    #lgndestino {
        width: 60%;
    }

    canvas {
        border: 1px solid black;
    }

    #ImgFirma {
        border: 1px solid black;
    }
</style>

<div class="row">
    <div class="col-md-6 col-12 col-sm-12">
        <h4 class="text-md-left text-center" style="float:left">Bandeja de Desechos Liquidos Peligrosos</h4>
    </div>
</div>
<hr />
<div class="row ">
    <div class="col-md-3 col-12 col-sm-12 text-md-left text-center">
        <label>ESTADO REPORTE:</label>
        <select id="selectEstadoReporte" class="form-control" onchange="CargarBandeja()">
            <option value="false" default>PENDIENTE APROBACION&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</option>
            <option value="true">APROBADO</option>
        </select>
    </div>
    <div class="col-md-2 col-12 col-sm-12 text-md-left text-center">
        <label>AÑO:</label>
        <select id="selectAnio" class="form-control" onchange="CargarBandeja()"></select>
    </div>
    <div class="col-md-1 col-12 col-sm-12 text-md-left text-center">
        <label>BUSCAR:</label><br />
        <a href="#" onclick="CargarBandeja()" id="btnModalGenerarRegistro" class="btn btn-primary btn-sm text-md-left text-center"><i id="iconSearch" class="fas fa-search"></i></a>
    </div>
</div>
<br /><hr />

@* DIV MOSTRAR PARTIAL VIEW *@
<div class="table-responsive" id="divTablaAplrobados">
    <table class="table-hover table-bordered table-striped table" style="cursor: pointer" id="tblDataTableDetalle">
        <thead>
            <tr>
                <th>MES</th>
                <th>FECHA CREACION</th>
                <th style="width:200px">USUARIO CREACION</th>
                <th style="width:200px"><center>ESTADO APROBACION</center></th>
            </tr>
        </thead>
        <tbody style="font-size:14px"></tbody>
    </table>
</div>

@* MODAL APRUEBA-PENDIENTE CONTROL*@
<div class="modal fade" id="ModalApruebaPendiente" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Aprobar</h5>
                <button type="button" class="close" data-dismiss="modal" onclick="ClearPAd()" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="table-responsive" id="divTblAprobarPendiente">

                </div>
            </div>
            @* FIRMA DIGITAL *@
            
            <div class="card" id="firmaDigital">
                <div id="signature-pad" class="align-self-md-center align-self-sm-center" hidden>
                    <button type="button" class="btn" data-action="clear" style="border-color:#2c3e50"><img style="width:100%" src="~/Content/icons/clear24.png" /></button>

                    <div>
                        <canvas width=400 height=200 id="firmacanvas"></canvas>
                    </div>
                    <div>
                        <center> <button type="button" class="btn btn-primary" id="btnGuardarFirma" onclick="GuardarFirma()">Guardar Firma</button></center>
                    </div>
                </div>
                <div id="div_ImagenFirma" class="align-self-md-center align-self-sm-center" hidden>


                    <img id="ImgFirma" width="400" height="200" src="" />
                    <div>
                        <center> <button type="button" class="btn btn-primary" id="btnActualizarFirma" onclick="VolverAFirmar()">Rehacer Firma</button></center>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" onclick="ClearPAd()" data-dismiss="modal">Cerrar</button>
                <button type="button" id="btnAprobado" hidden class="btn btn-primary" onclick="AprobarPendiente(true)">Aprobar</button>
                <button type="button" id="btnPendiente" hidden class="btn btn-primary" onclick="AprobarPendiente(false)">Reversar</button>
            </div>
        </div>
    </div>
</div>