@model IEnumerable<Asiservy.Automatizacion.Datos.Datos.spConsultaControlHoraMaquina>
@using Newtonsoft.Json;

<table class="table-hover table-bordered table-striped table" style="cursor: pointer" id="tblDataTable">
    <thead>

        <tr>
            <th>

            </th>
            <th>
                <label>O. Fabricación</label>
            </th>
            <th>
                <label>O. Venta</label>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Turno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th>
                <label>L. Negocio</label>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Producto)
            </th>
            <th>
                <label>Peso</label>
            </th>


        </tr>
    </thead>
    <tbody>
        @{ int i = 1;}
        @foreach (var item in Model)
        {
            string json = JsonConvert.SerializeObject(item);
            <tr onclick="seleccionarControlHoraMaquina(@json)">
                <td>@i</td>

                <td>
                    @Html.DisplayFor(modelItem => item.OrdenFabricacion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrdenVenta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Turno)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cliente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LineaNegocio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Producto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PesoNeto)
                </td>

            </tr>
            i++;
        }
    </tbody>

</table>
