
@{
    ViewBag.Title = "ReporteControlCocheLinea";
}

<h4>Reporte Control de Coche Por Linea</h4>

<div class="container-fluid">

    <div class="row">
        <div class="col-md-3 col-12">

            <input type="date" name="name" id="txtFecha" value="@DateTime.Now.ToString("yyyy-MM-dd")" class="form-control" />
            <span class="field-validation-valid text-danger" hidden id="txtValidaFecha"> Ingrese la Fecha </span>

        </div>

        <div class="col-md-4 col-12 text-md-left text-center">
            <button data-toggle="tooltip" data-placement="top" title="Mostrar" class="btn" id="btnGuardar" onclick="CargarControlCoche()" style="border-color:#2c3e50" type="button">
                <img style="width:100%" src="~/Content/icons/ver24.png" />
            </button>

        </div>
    </div>
    <hr />
    <div class="d-flex justify-content-center">
        <div id="spinnerCargando" hidden class="spinner-border" style="width: 3rem; height: 3rem;" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>

    <div class="row">
        <div class="table-responsive" id="DivTableReporteControlCoche">
        </div>
    </div>

</div>
