@model IEnumerable<Asiservy.Automatizacion.Datos.Datos.CC_ANALISIS_AGUA_TANQUERO>
@using Asiservy.Automatizacion.Datos.Datos
@using Newtonsoft.Json;

<table class="table-hover table-bordered table-striped table" style="cursor: pointer" id="tblDataTable">
    <thead>
        <tr>
          
            <th>
                @Html.DisplayNameFor(model => model.Hora)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Placa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Std)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dureza)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ph)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Olor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sabor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Destino)
            </th>
            <th>
                Observación
            </th>
           
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            CC_ANALISIS_AGUA_TANQUERO obj = new CC_ANALISIS_AGUA_TANQUERO
            {
                Placa = item.Placa,
                Std = item.Std,
                EstadoRegistro = item.EstadoRegistro,
                FechaIngresoLog = item.FechaIngresoLog,
                Hora = item.Hora,
                IdAnalisisAguaTanquero = item.IdAnalisisAguaTanquero,
                IdAnalisisAguaTanqueroControl = item.IdAnalisisAguaTanqueroControl,
                Observacion = item.Observacion,
                Color = item.Color,
                Destino = item.Destino,
                Dureza = item.Dureza,
                Olor = item.Olor,
                Ph = item.Ph,
                Sabor = item.Sabor
            };
            string json = JsonConvert.SerializeObject(obj);
        <tr onclick="SeleccionarControl(@json)">


            <td>
                @Html.DisplayFor(modelItem => item.Hora)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Placa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Std)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dureza)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ph)
            </td>
            <td class="text-center text-info">
                @if (item.Olor)
                {
                    <i class="fas fa-check-circle"></i>
                }
            </td>
            <td class="text-center text-info">
                @if (item.Color)
                {
                    <i class="fas fa-check-circle"></i>
                }
            </td>
            <td class="text-center text-info">
                @if (item.Sabor)
                {
                    <i class="fas fa-check-circle"></i>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Destino)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Observacion)
            </td>

        </tr>
        }

</table>
