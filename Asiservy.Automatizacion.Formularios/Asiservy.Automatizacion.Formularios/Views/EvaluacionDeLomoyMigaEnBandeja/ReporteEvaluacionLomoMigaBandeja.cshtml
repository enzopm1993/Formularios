
@{
    ViewBag.Title = "ReporteEvaluacionLomoMigaBandeja";
}
<style>
    @@media print {
        @@page {
            size: landscape;
        }
        
        #divcarddet {
            border: none;
        }

        #TablasDetalles {
            flex: 0 0 50%;
            max-width: 50%;
        }

        #DivBotonImpr {
            display: none;
        }

        #card1 {
            display: none;
        }

        #espacio {
            display: none;
        }

        #accordionSidebar {
            display: none;
        }

        #titulo {
            display: none;
        }

        #tablaCab {
            margin-bottom: 0rem;
            margin-top: 0rem;
            border: 1px solid red;
        }
        #tbltitulo {
            display:block;
            margin-bottom: 0rem;
        }

        #tablaCab td {
            font-size: 0.5rem;
        }

        #tblReporte td {
            font-size: 0.5rem;
        }
        /*table tr td {
            border: 1px solid black;
        }*/
        #firma1 {
            border-bottom: solid;
        }

        #firma2 {
            border-bottom: solid;
        }
    }
    @@media screen{
        .selectbox {
            background: #fff;
            padding: 5px 8px;
            line-height: 18px;
            border-radius: 4px;
            border-width: 0 1px 4px;
            cursor: pointer;
            border: 1px solid #ddd;
        }

        .btnWait {
            cursor: no-drop !important;
        }
        #tablaCab {
            /*border-bottom: 1rem;*/
        }
        #tbltitulo {
            display: none;
            margin-bottom: 0rem;
        }
        input, select, textarea {
            max-width: 100%;
        }

        .table {
            margin-bottom: 0.5rem;
        }

        .table tr td {
            border: 1px solid black;
        }

        .card {
            box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
            transition: 0.3s;
            width: 100%;
            padding-top: 10px;
            padding-bottom: 10px;
            padding-left: 10px;
            padding-right: 10px;
        }
        #firma1 {
            border-bottom: solid;
        }

        #firma2 {
            border-bottom: solid;
        }
    }
</style>
<h4 id="titulo">Reporte de evaluación de lomos y migas en bandeja</h4>

<div class="card" id="card1">
    <div class="row">
        <div class="col-md-5 col-sm-6 form-group" id="divDateRangePicker">
            <label>Filtrar por Fecha:</label>
            <input type="hidden" id="fechaDesde" value="" />
            <input type="hidden" id="fechaHasta" value="" />
            <div id="reportrange" class="selectbox">
                <i class="fa fa-calendar"></i>&nbsp;
                <span></span> <i class="fa fa-caret-down" style="float:right"></i>
            </div>
        </div>
        <div class="col-5">
            <label>Acciones</label>
            <div class="form-group">
                <button data-toggle="tooltip" data-placement="top" title="Consultar" class="btn" id="Nuevo" onclick="CargarCabReportes()" style="border-color:#2c3e50" type="button">
                    <img style="width:100%" src="~/Content/icons/ver24.png" />
                </button>
            </div>
        </div>
        <label id="msjErrorFechaProduccion" class="text-danger" hidden>Debe ingresar una fecha</label>
    </div>
</div>
<br />
