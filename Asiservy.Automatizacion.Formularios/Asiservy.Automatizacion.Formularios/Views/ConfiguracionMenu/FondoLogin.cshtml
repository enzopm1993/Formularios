
@{
    ViewBag.Title = "FondoLogin";
}

<h4>Fondo del Login</h4>

<div class="card shadow">
    <div class="card-header">
        <button data-toggle="modal" data-target="" data-placement="top" title="Agregar" class="btn" id="Nuevo" onclick="MostrarModal()" style="border-color:#2c3e50" type="button">
            <img style="width:100%" src="~/Content/icons/add24.png" />
        </button>
    </div>
    <div class="card-body">
        <div id="DivTableControl">

        </div>
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="ModalLoginFondo" tabindex="-1" role="dialog" aria-labelledby="ModalLoginFondoTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Fondo Login</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="txtDescripcion">Descripción</label>
                        <input type="text" class="form-control" id="txtDescripcion" placeholder="">
                    </div>
                    <div id="divInputLoad" class="">
                        <label>Fondo</label>
                        <div class="custom-file" id="divFileUpload">
                            <input type="file" class="file-upload" id="file-upload" accept="image/*">
                            <label class="custom-file-label" for="file-upload" id="lblfoto">Seleccione fondo</label>
                        </div>
                        @*<div id="divFileUpload">
                <input id="file-upload" type="file" accept="image/*" />
            </div>*@
                        <br />
                        <div class="text-center" style="justify-content:center">
                            <div id="file-preview-zone" style="height:auto">
                            </div>

                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="GuardarFondoLogin()">Guardar</button>
            </div>
        </div>
    </div>
</div>