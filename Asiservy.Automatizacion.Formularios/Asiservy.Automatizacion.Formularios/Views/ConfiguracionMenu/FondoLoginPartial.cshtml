@model IEnumerable<Asiservy.Automatizacion.Datos.Datos.FONDO_LOGIN>
@using Newtonsoft.Json;

<div class="row">
    @foreach (var item in Model)
    {

        <div class="col-md-4 col-12 col-sm-12">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="~/ImagenSiaa/@item.Imagen" alt="Card image cap">
                <div class="card-body">
                    <label class="card-text">@item.Descripcion.ToUpper() </label>
                    @if (item.Vigente)
                    {
                        <i class="fa fa-check-circle fa-lg text-success" aria-hidden="true"></i>
                    }

                </div>
                <div class="card-footer">
                    @{
                        string json = JsonConvert.SerializeObject(item);
                    }
                    <button id="btnActualizar" class="btn btn-link" onclick="EditarControl(@json)">Editar</button>
                    <button id="btnActualizar" class="btn btn-link" onclick="ActivarControl(@json)">Activar</button>

                </div>
            </div>
        </div>
    }
</div>