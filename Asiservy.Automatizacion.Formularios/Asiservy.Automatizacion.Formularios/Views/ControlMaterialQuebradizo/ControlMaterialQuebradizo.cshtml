
@{
    ViewBag.Title = "ControlMaterialQuebradizo";
}
<style>
    input, select, textarea {
        max-width: 100%;
    }
</style>
<h3>Control de materiales quebradizo</h3>
@{DateTime Fecha = DateTime.Now;}
<div class="row">
    <div class="offset-sm-2 col-md-4 col-6">
        <label>Linea</label>
        @Html.DropDownList("selectLinea", new SelectList(ViewBag.Lineas, "Codigo", "Descripcion"), new { @class = "form-control" })
    </div>

    <div class="col-md-4 col-6">
        <label>Fecha</label>
        <input type="date" class="form-control" id="txtFechaControl" name="name" value="@Fecha.ToString("yyyy-MM-dd")" />
    </div>
</div>
<br />
<div class="row">
    <div class="col-12 text-center">
        <input id="btnGenerar" type="button" class="btn btn-outline-success" name="name" value="Generar" onclick="GenerarControlMaterial()" />
    </div>
</div>

<hr />
<div id="spinnerCargando" hidden class="text-center">
    <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
        <span class="sr-only">Cargando...</span>
    </div>
</div>

<div id="divTablaControlDetalle" class="table-responsive">

</div>