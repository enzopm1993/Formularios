@model IEnumerable<Asiservy.Automatizacion.Datos.Datos.spConsultaControlPesoEnlatadoSubDetalle>


<table class=" table-bordered table-striped table" style="cursor: pointer"id="tablaControlPesoEnlatadoSubDetalle"> 
    <thead>
    <tr>        
        <th>
            @Html.DisplayNameFor(model => model.Muestra)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Peso)
        </th>      
        <th>Acción</th>
    </tr>
        </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Muestra)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Peso)
                </td>

                <td>
                    <a onclick="ModalEditarSubDetalle(@item.IdControlPesoEnlatadoSubdetalle,'@item.Muestra','@item.Peso')">Editar</a> |
                    <a onclick="ModalEliminarSubDetalle(@item.IdControlPesoEnlatadoSubdetalle)" id="btnInactivarDetalle">Eliminar</a>

                </td>
            </tr>
        }
    </tbody>
</table>
