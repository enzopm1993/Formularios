@model IEnumerable<Asiservy.Automatizacion.Datos.Datos.spConsultaControlPesoEnlatado>

@using Newtonsoft.Json;

<table class="table-hover table-bordered table-striped table" style="cursor: pointer" id="tblDataTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrdenFabricacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrdenVenta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Producto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Peso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LineaEnlatado)
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            string json = JsonConvert.SerializeObject(item);
            <tr onclick="SeleccionarControlPesoEnlatado(@json)">
                <td>
                    @Html.DisplayFor(modelItem => item.OrdenFabricacion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrdenVenta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Producto)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Peso)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.LineaEnlatado)
                </td>


            </tr>
        }
    </tbody>
</table>
