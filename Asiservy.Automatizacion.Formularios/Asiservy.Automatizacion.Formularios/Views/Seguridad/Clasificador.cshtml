@model Asiservy.Automatizacion.Formularios.Models.Seguridad.Clasificador

@{
    ViewBag.Title = "Clasificador";
}

<h2>Clasificador</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Clasificador</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="form-group" hidden>
        <div class="col-md-3">
            @Html.EditorFor(model => model.IdClasificador, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div>
        <div class="form-group">
            <div class="custom-control custom-checkbox mb-3">
                @Html.CheckBox("EstadoRegistro", false, new { @id = "CheckEstadoRegistro", @class = "custom-control-input", @onchange = "CambioEstado(this.checked)" })
                @*   <input type="checkbox" class="custom-control-input" id="CheckEstadoRegistro" name="example1">*@
                <label class="custom-control-label" for="CheckEstadoRegistro" id="LabelEstado">Grupo</label>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <div class="form-group">
                @Html.LabelFor(model => model.GrupoMombre, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.DropDownListFor(model => model.Grupo, new SelectList(ViewBag.Grupos, "Codigo", "Descripcion"), "Seleccione", new { @class = "form-control" })
            </div>
        </div>

        <div class="col-md-3">
            <div class="form-group">
                @Html.LabelFor(model => model.Codigo, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.Codigo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Codigo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-3">
            <div class="form-group">
                @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-3">
            <div class="form-group">
                @Html.LabelFor(model => model.EstadoRegistro, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.EstadoRegistro, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.EstadoRegistro, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="text-center col-md-12">
        <div class="form-group">
            <input type="button" value="Grabar" class="btn btn-primary" />
        </div>
    </div>
</div>
}

<div class="table-responsive" id="DivTableClasificador" style="padding-bottom:5%"> </div>

<script src="~/Scripts/SeguridadJS/Clasificador.js"></script>