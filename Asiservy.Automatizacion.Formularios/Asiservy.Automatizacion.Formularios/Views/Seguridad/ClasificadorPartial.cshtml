@model IEnumerable<Asiservy.Automatizacion.Formularios.Models.Seguridad.Clasificador>

<table class="table table-bordered" id="TableClasificadorPartial">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdClasificador)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grupo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GrupoNombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Codigo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstadoRegistro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaIngresoLog)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UsuarioIngresoLog)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TerminalIngresoLog)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaModificacionLog)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UsuarioModificacionLog)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TerminalModificacionLog)
            </th>

        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <tr onclick="SeleccionClasificador(@item.IdClasificador,'@item.Grupo','@item.Codigo','@item.Descripcion','@item.EstadoRegistro')">
                    <td>
                        @Html.DisplayFor(modelItem => item.IdClasificador)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Grupo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GrupoNombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Codigo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EstadoRegistro)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaIngresoLog)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UsuarioIngresoLog)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TerminalIngresoLog)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaModificacionLog)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UsuarioModificacionLog)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TerminalModificacionLog)
                    </td>

                </tr>
            }
        }
    </tbody>
</table>




