@model Asiservy.Automatizacion.Datos.Datos.CC_LINPIEZA_DESINFECCION_PLANTA_CONTROL

@{
    ViewBag.Title = "LimpiezaDesinfeccionPlanta";
}


<style>
    input, select, textarea {
        max-width: 100%;
    }

    .selectbox {
        background: #fff;
        color: #1d3b4a;
        padding: 5px 8px;
        line-height: 18px;
        border-radius: 4px;
        border-width: 0 1px 4px;
        cursor: pointer;
        border: 1px solid #ddd;
    }

    .box_filters {
        float: right;
    }

    .itemFilter {
        float: left;
        margin-right: 4px;
    }

    .btnWait {
        cursor: no-drop !important;
    }

    ._bloque {
        margin-bottom: 10px;
    }
</style>
<div class="row">
    <div class="col-12">
        <h4 style="float:left">Control Higiene Comedor Cocina</h4>
        <div class="col.md-4 box_filters">
            <div class="itemFilter">
                <input type="date" name="name" value="@DateTime.Now.ToString("yyyy-MM-dd")" onchange="CargarCabecera(0)" id="txtFecha" class="form-control" />
            </div>
            <div class="itemFilter">
                <a href="#" id="btnModalGenerarRegistro" title="Consultar registro" class="btn btn-primary btn-sm"><i onclick="CargarCabecera(0)" id="iconSearch" class="fas fa-search"></i></a>
            </div>
        </div>
    </div>
</div>

<div class="row" id="divCabecera1">
    <div class="col-12">
        <div class="col-md-3 col-12 float-left">
            <label class="" id="lblAcciones">Nuevo Registro</label>
            <div class="form-group">
                <button data-toggle="tooltip" data-placement="top" title="Crear nuevo registro" class="btn" id="btnModalGenerarRegistro" onclick="ModalIngresoCabecera()" style="border-color:#2c3e50" type="button">
                    <img style="width:100%" src="~/Content/icons/add24.png" />
                </button>
            </div>
        </div>

    </div>
</div>

<div class="card col-md-12" id="divMostrarCabecera">
    <div class="row">
        <div class="col-md-3 col-12 col-sm-12">
            <div class="form-group">
                <label>FECHA / HORA</label>
                <input type="datetime-local" name="name" disabled value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" onchange="OnChangeTextBox(0)" id="txtFechaCabeceraVer" class="form-control" />
            </div>
        </div>

        <div class="col-md-3 col-12 col-sm-12">
            <div class="form-group">
                <label>INSPECTOR CALIDAD</label>
                <input type="text" name="name" disabled value="" onchange="OnChangeTextBox()" id="txtInspectorCalidadVer" class="form-control" />
            </div>
        </div>
        <div class="col-md-4 col-12 col-sm-12">
            <div class="form-group">
                <label>OBSERVACION</label>
                <input type="text" name="name" disabled value="" onchange="OnChangeTextBox()" id="txtObservacionVer" class="form-control" />
            </div>
        </div>
        <div class="col-md-2 col-12 col-sm-12" style="float:right">
            <div class="form-group">
                <label>ACCIONES</label><br />
                <button data-toggle="tooltip" data-placement="top" title="Eliminar" class="btn" id="btnModalEliminar" onclick="EliminarConfirmar()" style="border-color:#2c3e50" type="button">
                    <img style="width:100%" src="~/Content/icons/cancel24.png" />
                </button>
                <button data-toggle="tooltip" data-placement="top" title="Editar" class="btn" id="btnModalEditar" onclick="ActualizarCabeceraActivarCotroles(true)" style="border-color:#2c3e50" type="button">
                    <img style="width:100%" src="~/Content/icons/edit24.png" />
                </button>
            </div>
        </div>
    </div>
</div>
