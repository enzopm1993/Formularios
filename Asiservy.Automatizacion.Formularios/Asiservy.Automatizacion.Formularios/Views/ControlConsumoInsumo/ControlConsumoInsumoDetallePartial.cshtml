@model IEnumerable<Asiservy.Automatizacion.Datos.Datos.spConsultaControlConsumoInsumoDetalle>
@using Newtonsoft.Json;

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.HoraInicio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HoraFin)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.HoraInicio.ToString("HH:mm")
            </td>
            <td>
                @item.HoraFin.ToString("HH:mm")

            </td>
            <td>
                @{string json = JsonConvert.SerializeObject(item); }
                <button class="btn btn-link" onclick="EditarConsumoInsumoDetalle(@json)">Editar</button>
                |
                <button class="btn btn-link" onclick="EliminarProcesoConsumoInsumoDetalle(@json)">Eliminar</button>

            </td>
        </tr>
    }

</table>
