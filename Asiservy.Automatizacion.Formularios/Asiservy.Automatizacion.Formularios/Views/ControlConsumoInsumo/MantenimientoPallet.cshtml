
@{
    ViewBag.Title = "DetallePallet";
}
<style>
    input, select, textarea {
        max-width: 100%;
    }
</style>
<h4>Mantenimiento Pallet</h4>

<input type="number" id="IdPallet" value="0" hidden/>
<div class="row" id="">
    <div class="col-md-2 col-sm-12">
        <div class="form-group">
            <label>Proveedor:</label>
            @Html.DropDownList("cmbProveedor", new SelectList(ViewBag.Proveedor, "Codigo", "Descripcion"), "Seleccione una opción",new { @class="form-control"})
            <label id="msjProveedor" class="text-danger" style="display:none">Debe seleccionar un Proveedor</label>
        </div>
    </div>
    <div class="col-md-2 col-sm-12">
        <div class="form-group">
            <label class="control-label">Pallet:</label>

            <input type="number" id="txtPallet" class="form-control" />
            <label id="msjPallet" class="text-danger" style="display:none">Debe Ingresar un número de Pallet</label>

        </div>
    </div>

    <div class="col-md-2 col-sm-12">
        <div class="form-group">
            <label class="control-label">Envase:</label>
            <input type="text" id="txtenvase" class="form-control" />
            <label id="msjenvase" class="text-danger" style="display:none">Debe Ingresar el envase</label>

        </div>
    </div>
    <div class="col-md-3 col-sm-12">
        <div class="form-group">
            <label class="control-label">Lámina: </label>
            <input type="number" id="txtlamina" class="form-control" />
            <label id="msjlamina" class="text-danger" style="display:none">Debe Ingresar la lámina</label>
        </div>
    </div>
    <div class="col-md-3 col-sm-12">
        <div class="form-group">
            <label class="control-label">Unidades: </label>
            <input type="number" id="txtunidades" class="form-control" />
            <label id="msjunidades" class="text-danger" style="display:none">Debe Ingresar las unidades</label>
        </div>
    </div>
</div>
<br />
<div class="row">
    <div class=" col-12 text-center">
        <button class="btn btn-primary" type="button" disabled hidden id="btnGuardarCargando">
            <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
            Espere...
        </button>

        <button data-toggle="tooltip" data-placement="top" title="Nuevo" class="btn" id="Limpiar" onclick="Nuevo()" style="border-color:#2c3e50" type="button">
            <img style="width:100%" src="~/Content/icons/clear24.png" />
        </button>
        <button data-toggle="tooltip" data-placement="top" title="Generar" class="btn" id="btnGuardar" onclick="GuardarPallet()" style="border-color:#2c3e50" type="button">
            <img style="width:100%" src="~/Content/icons/add24.png" />
        </button>

        @*<button data-toggle="tooltip" data-placement="top" title="Atras" class="btn" id="btnAtras" onclick="Atras()" style="border-color:#2c3e50" type="button" hidden>
            <img style="width:100%" src="~/Content/icons/atras24.png" />
        </button>
        <button data-toggle="tooltip" data-placement="top" title="Inactivar" class="btn" id="btnInactivar" onclick="ConfirmarInactivar()" style="border-color:#2c3e50" type="button" hidden>
            <img style="width:100%" src="~/Content/icons/cancel24.png" />
        </button>
        <button data-toggle="tooltip" data-placement="top" title="Editar" class="btn" id="btnEditar" onclick="EditarCabeceraToalla()" style="border-color:#2c3e50" type="button" hidden>
            <img style="width:100%" src="~/Content/icons/edit24.png" />
        </button>*@

    </div>
</div>



<hr />
<div class="d-flex justify-content-center">
    <div id="spinnerCargando" hidden class="spinner-border" style="width: 3rem; height: 3rem;" role="status">
        <span class="sr-only">Cargando...</span>
    </div>
</div>

<div class="table-responsive" id="DivPartialPallet">

</div>

