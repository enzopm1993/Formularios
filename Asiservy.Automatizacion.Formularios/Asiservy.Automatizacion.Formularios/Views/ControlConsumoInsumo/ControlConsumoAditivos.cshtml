@model IEnumerable<Asiservy.Automatizacion.Datos.Datos.spConsultaConsumoDetalleAditivo>
@using Newtonsoft.Json;


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Proveedor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Aditivo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Peso)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lote)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Proveedor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescripcionAditivo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Peso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lote)
            </td>

            <td>
                @{string json = JsonConvert.SerializeObject(item); }
                <button class="btn btn-link" onclick="EditarConsumoAditivos(@json)">Editar</button>
                |
                <button class="btn btn-link" onclick="EliminarConsumoAditivos(@json)">Eliminar</button>


            </td>
        </tr>
    }

</table>
