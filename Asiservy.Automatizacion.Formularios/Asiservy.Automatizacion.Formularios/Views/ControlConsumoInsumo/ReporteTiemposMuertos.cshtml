@model IEnumerable<Asiservy.Automatizacion.Datos.Datos.spConsultaConsumoTiempoMuerto>

<table class="table table-bordered  table-responsive-sm table-responsive-xl">
    <tr>
       
        <th>
           Para
        </th>
        <th>
           Reinicio
        </th>      
        <th>
            @Html.DisplayNameFor(model => model.Tipo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Observacion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
     
        <td>
            @{
                if (item.HoraPara != null)
                {
                    var HoraPara = item.HoraPara.ToString("HH:mm");
                    @HoraPara
                }
            }
        </td>
        <td>
            @{
                if (item.HoraReinicio != null)
                {
                    var HoraPara = item.HoraReinicio.Value.ToString("HH:mm");
                    @HoraPara
                }
            }
        </td>       
        <td>
            @Html.DisplayFor(modelItem => item.Tipo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Observacion)
        </td>
        
    </tr>
}

</table>
