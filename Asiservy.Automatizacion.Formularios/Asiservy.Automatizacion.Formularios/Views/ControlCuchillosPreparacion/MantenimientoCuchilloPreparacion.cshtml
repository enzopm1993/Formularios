@model Asiservy.Automatizacion.Datos.Datos.sp_Consultar_Cuchillos_Preparacion

@{
    ViewBag.Title = "MantenimientoCuchilloPreparacion";
}

<h4>Mantenimiento Cuchillo Preparacion</h4>

<style>
    input, select, textarea {
        max-width: 100%;
    }
</style>

<hr />
<div class="row" id="divCabecera1">    
    <div class="col-md-2 col-12  text-md-left text-center">
        <label class="" id="lblAcciones">Nuevo Cuchillo</label>
        <div class="form-group">
            <button data-toggle="tooltip" data-placement="top" title="Crear nuevo registro" class="btn" id="btnModalGenerarRegistro" onclick="ModalNuevoRegistro()" style="border-color:#2c3e50" type="button">
                <img style="width:100%" src="~/Content/icons/add24.png" />
            </button>
        </div>
    </div>

</div>
<hr />


@* CARGAR TABLA CON LOS CUCHILLOS EXISTENTES *@
<div class="table-responsive" id="DivCargarCuchillos">
    <table class="table-hover table-bordered table-striped table" style="cursor: pointer" id="tblDataTableCargar">
        <thead>
            <tr>
                <th>Codigo Cuchillo</th>
                <th>Descripcion</th>
                <th>Estado</th>
            </tr>
        </thead>
        <tbody style="font-size:14px"></tbody>
    </table>
</div>

@* MODAL PARA EL INGRESO NUEVO REGISTRO *@
<div class="modal" tabindex="-1" id="ModalIngresoRegistro" role="dialog" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Crear Nuevo Registro</h5>
                <button type="button" class="close" data-dismiss="modal" onclick="LimpiarCabecera()" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-3 col-12 col-sm-12">
                        <div class="form-group">
                            <label>Buscar/Código Cuchillo</label>
                            <input style="text-transform:uppercase;" type="text" name="name" value="" onkeyup="ListarCuchillocPreparacion(1)" id="txtCodigoCuchillo" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-6 col-12 col-sm-12">
                        <div class="form-group">
                            <label>Descripción</label>
                            <input type="text" name="name" value="" id="txtDescripcion" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-3 col-12" id="ModalCheckBox">
                        <div class="form-group">
                            <label>Estado</label>
                            <div class="custom-control custom-checkbox mb-3">
                                @Html.CheckBox("EstadoRegistro", true, new { @id = "CheckEstadoRegistroOp", @class = "custom-control-input", @onchange = "CambioEstado(this.checked)" })
                                <label class="custom-control-label" for="CheckEstadoRegistroOp" id="LabelEstado">Estado Registro</label>
                            </div>
                        </div>
                    </div>
                </div>  
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" onclick="GuardarModificarCuchilloPreparacion()" id="btnGenerarControlRegistro">Guardar</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="LimpiarCabecera()">Cancelar</button>
                </div>
            </div>
        </div>
    </div>
</div>