@model Asiservy.Automatizacion.Datos.Datos.sp_Control_Cuchillos_Preparacion

@{
    ViewBag.Title = "ControlCuchilloPreparacion";
}

<h2>CONTROL DE CUCHILLOS DE PREPARACION</h2>

<div class="row" id="divCabecera">
    <div class="col-md-3 col-6 col-sm-6">
        <div class="form-group">
            <label>Fecha-Hora</label>
            <input type="datetime-local" name="name" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" onchange="ListarControlCuchillos(0)" id="txtFecha" class="form-control" />
        </div>
    </div>
    <div class="col-md-5 col-6 col-sm-6">
        <div class="form-group">
            <label>Observación</label>
            <input type="text" name="name" value="" id="txtObservacion" class="form-control" />
        </div>
    </div>
    <div class="col-md-4 col-6s  text-md-left text-center">
        <label class="" id="lblAcciones">Acciones</label>
        <div class="form-group">
            <button data-toggle="tooltip" data-placement="top" title="Crear nuevo registro" class="btn" id="btnModalGenerarRegistro" onclick="GuardarModificarControlCuchilloPreparacion()" style="border-color:#2c3e50" type="button">
                <img style="width:100%" src="~/Content/icons/add24.png" />
            </button>
            <button hidden data-toggle="tooltip" data-placement="top" title="Actualizar registro" class="btn" id="btnModalActualizarRegistro" onclick="ActualizarControlSi()" style="border-color:#2c3e50" type="button">
                <img style="width:100%" src="~/Content/icons/add24.png" />
            </button>
            <button hidden data-toggle="tooltip" data-placement="top" title="Eliminar" class="btn" id="btnModalEliminar" onclick="EliminarConfirmar()" style="border-color:#2c3e50" type="button">
                <img style="width:100%" src="~/Content/icons/cancel24.png" />
            </button>
            <button hidden data-toggle="tooltip" data-placement="top" title="Editar" class="btn" id="btnModalEditar" onclick="ActualizarCabecera(true)" style="border-color:#2c3e50" type="button">
                <img style="width:100%" src="~/Content/icons/edit24.png" />
            </button>
            <button hidden data-toggle="tooltip" data-placement="top" title="Bodegas" class="btn" id="btnBodegas" onclick="ModalBodegas()" style="border-color:#2c3e50" type="button">
                <img style="width:100%" src="~/Content/icons/justificar24.png" />
            </button>
            <button hidden data-toggle="tooltip" data-placement="top" title="Atras" class="btn" id="btnAtras" onclick="AtrasControlPrincipal()" style="border-color:#2c3e50" type="button">
                <img style="width:100%" src="~/Content/icons/atras24.png" />
            </button>
        </div>
    </div>
</div>
@* CARGAR TABLA CON LOS REGISTROS DE LA FECHA FILTRADA *@
<div class="table-responsive" id="divCargarCuchillos">
    <table class="table-hover table-bordered table-striped table" style="cursor: pointer" id="tblDataTableCargar">
        <thead>
            <tr>
                <th>Id</th>
                <th>Fecha</th>
                <th>Hora</th>
                <th>Observación</th>
            </tr>
        </thead>
        <tbody style="font-size:14px"></tbody>
    </table>
</div>

<!-- MODAL AGREGAR CUCHILOS A LA CABECERA -->
@* MODAL MOSTRAR BOTON AGREGAR*@
<div id="divIngresarDetalleHora" hidden>
    <div class="row">

        <div class="col-md-12 col-12 col-sm-12">
            <div class="card shadow">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-2 col-sm-3 col-4">
                            <div class="form-group">
                                @*<input type="button" name="name" value="Consultar" id="btnConsultar" class="btn btn-primary" onclick="CargarReporteAvance()" />*@
                                <button data-toggle="tooltip" data-placement="top" title="Crear Registro Hora" class="btn" id="btnModalGenerarDetalle" onclick="ModalGenerarDetalle()" style="border-color:#2c3e50" type="button">
                                    <img style="width:100%" src="~/Content/icons/add24.png" />
                                </button>
                            </div>
                        </div>
                        <div class="col-md-10 col-sm-9 col-8">
                            <h4>Ingreso Control Cuchillos</h4>
                        </div>
                    </div>

                </div>
                <div class="card-body">
                    <div id="chart">
                        <div class="d-flex justify-content-center">
                            <div id="spinnerCargandoConsumoInsumoDetalle" hidden class="spinner-border" style="width: 3rem; height: 3rem;" role="status">
                                <span class="sr-only">Loading...</span>
                            </div>
                        </div>

                        <div id="divTableEntregaProductoDetalle" class="table-responsive">

                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

@* MODAL PARA EL INGRESO DE LOS CONTROLES CHECKBOX *@
<div class="modal" tabindex="-1" id="ModalIngresoDetalle" role="dialog" data-backdrop="static">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Control Cuchillo</h5>
                <button type="button" class="close" data-dismiss="modal" onclick="LimpiarDetalle()" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <input type="hidden" id="txtIdEntregaProductoTerminadoDetalle" name="name" value="0" />
                    <div class="col-md-5 col-6 col-sm-6">
                        <div class="form-group">
                            <label>Código Cuchillo</label>
                            @Html.DropDownList("txtCodigoCuchillo", new SelectList(ViewBag.Cuchillos, "IdCuchilloPreparacion", "CodigoCuchillo"), "Seleccione", new { @class = "form-control", @onchange = "ValidarCuchilloExiste(0)" })
                        </div>
                    </div>

                    <div class="col-md-5 col-6" id="ModalCheckBox">
                        <div class="form-group">
                            <label>Estado</label>
                            <div class="custom-control custom-checkbox mb-3">
                                @Html.CheckBox("EstadoRegistro", false, new { @id = "CheckEstadoRegistroOp", @class = "custom-control-input", @onchange = "CambioEstado(this.checked)" })
                                <label class="custom-control-label" for="CheckEstadoRegistroOp" id="LabelEstado">Estado Registro</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="GuardarControlDetalle(0)" id="btnGenerarControlDetalle">Guardar</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="LimpiarDetalle()">Cancelar</button>
            </div>
        </div>
    </div>
</div>

@*MODAL ELIMINAR CABECERA COFIRMAR*@
<div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true" id="modalEliminarControl">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <input type="hidden" id="txtEliminarDetalle" name="name" value="" />
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">¿Desea eliminar este control?</h4>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-danger" onclick="EliminarCabeceraSi()" id="modal-detalle-si">Si</button>
                <button type="button" class="btn btn-outline-primary" onclick="EliminarCabeceraNo()" id="modal-detalle-no">No</button>
            </div>
        </div>
    </div>
</div>

@* MODAL CARGAR DETALLE DE CUCHILLO *@
<div class="table-responsive" id="divCargarCuchillosDetalle">
    <table class="table-hover table-bordered table-striped table" style="cursor: pointer" id="tblDataTableCargarDetalle">
        <thead>
            <tr>
                <th>Código Cuchillo</th>
                <th>Estado</th>
                <th>Usuario Creación</th>
                <th>Usuario Modificación</th>
                @*<th>Acciones</th>*@
            </tr>
        </thead>
        <tbody style="font-size:14px"></tbody>
    </table>
</div>

@* MODAL PARA ELIMINAR/ACTUALIZARDETALLE *@
<div class="modal" tabindex="-1" id="ModalEliminarActualizarDetalle" role="dialog" data-backdrop="static">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Control Cuchillo</h5>
                <button type="button" class="close" data-dismiss="modal" onclick="LimpiarDetalle()" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <input type="hidden" id="txtIdEntregaProductoTerminadoDetalle" name="name" value="0" />
                    <div class="col-md-5 col-6 col-sm-6">
                        <div class="form-group">
                            <label>Código Cuchillo</label>
                            @Html.DropDownList("txtCodigoCuchilloDetalle", new SelectList(ViewBag.Cuchillos, "IdCuchilloPreparacion", "CodigoCuchillo"), "Seleccione", new { @class = "form-control", @onchange = "ValidarCuchilloExiste(1)" })
                        </div>
                    </div>

                    <div class="col-md-5 col-6" id="ModalCheckBox">
                        <div class="form-group">
                            <label>Estado</label>
                            <div class="custom-control custom-checkbox mb-3">
                                @Html.CheckBox("EstadoRegistroDetalle", false, new { @id = "CheckEstadoRegistroOpD", @class = "custom-control-input", @onchange = "CambioEstadoDetalle(this.checked)" })
                                <label class="custom-control-label" for="CheckEstadoRegistroOpD" id="LabelEstadoDetalle">Estao Registro</label>
                                <input type="hidden" id="txtActualizar" value="" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-danger" onclick="EliminarDetalleSi()" id="btnEliminarDetalle">Eliminar</button>
                <button type="button" class="btn btn-primary" onclick="GuardarControlDetalle(1)" id="btnActualizarDetalle">Actualizar</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="LimpiarDetalle()">Cancelar</button>
            </div>
        </div>
    </div>
</div>