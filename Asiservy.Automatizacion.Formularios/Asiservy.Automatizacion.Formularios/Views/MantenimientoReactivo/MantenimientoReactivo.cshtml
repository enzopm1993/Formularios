
@{
    ViewBag.Title = "MantenimientoReactivo";
}

<style>
    input, select, textarea {
        max-width: 100%;
    }

    .btn-link:hover {
        color: white;
        text-decoration: underline;
    }
</style>

<h4>Mantenimiento de Reactivos</h4>


<hr />
<div class="card shadow" id="divCabecera" style="padding:10px">
    <div class="row" id="divCabecera1">

        <div class="col-md-1 col-6 col-sm-6">
            <div class="form-group">
                <label>Id</label>
                <input type="text" disabled class="form-control" id="txtIdControl" name="name" value="0" />
            </div>
        </div>

        <div class="col-md-6 col-6 col-sm-6">
            <div class="form-group">
                <label>Descripción</label>
                <input type="text" class="form-control" maxlength="250" id="txtDescripcion" autocomplete="off" name="name" value="" />
            </div>
        </div>
        <div class="col-md-2 col-6 col-sm-6">
            <div class="form-group">
                <label>Unidad de Medición</label>
                <input type="text" class="form-control" maxlength="5" id="txtAbreviatura" autocomplete="off" name="name" value="" />
            </div>
        </div>
        <div class="col-md-2 col-6 col-sm-6">
            <div class="form-group">
                <label>Valor Predeterminado</label>
                <input type="number" class="form-control" maxlength="6" id="txtValorPredeterminado" autocomplete="off" name="name" value="" />
            </div>
        </div>
        @*<div class="col-md-3 col-sm-12">
            <div class="form-group">
                <label></label>
                <div class="custom-control custom-checkbox mb-3">
                    @Html.CheckBox("EstadoRegistro", true, new { @id = "CheckEstadoRegistro", @class = "custom-control-input", @onchange = "CambioEstado(this.checked)" })
                    <label class="custom-control-label" for="CheckEstadoRegistro" id="LabelEstado">Estado Registro</label>
                </div>
            </div>
        </div>*@
    </div>
</div>

