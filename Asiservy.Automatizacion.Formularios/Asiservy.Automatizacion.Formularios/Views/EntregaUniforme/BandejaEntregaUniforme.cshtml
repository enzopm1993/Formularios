
@{
    ViewBag.Title = "BandejaEntregaUniforme";
}

<style>
    input, select, textarea {
        max-width: 100%
    }
</style>

<h4>Bandeja Entrega Uniforme</h4>


<div class="" style="padding-bottom:5%">

    <br />
    <div class="row">

        <div class="col-md-4 col-sm-6 col-6">
            <div class="form-group">
                <label>Fecha</label>
                <input type="date" class="form-control" id="txtFecha" onchange="ConsultarEntregaUniformes()" name="name" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
            </div>
        </div>
        <div class="col-md-4 col-sm-6 col-6">
            <div class="form-group">
            <label>Acción</label>
            <div class="col text-left">
                <button data-toggle="tooltip" data-placement="top" title="Consultar" class="btn" id="" onclick="ConsultarEntregaUniformes()" style="border-color:#2c3e50" type="button">
                    <img style="width:100%" src="~/Content/icons/ver24.png" />
                </button>
            </div>
            </div>
        </div>
    </div>

    <hr />
    <div id="spinnerCargando" hidden class="text-center">
        <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
            <span class="sr-only">Cargando...</span>
        </div>
    </div>

    <div class="table-responsive" style="padding-bottom:5%" id="divEntregaUniforme">

    </div>


</div>


<div class="modal" tabindex="-1" id="ModalEntregaUniforme" role="dialog" data-backdrop="static">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Entrega de Uniforme</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12 col-12 col-sm-12">
                        <div class="form-group">
                            <label>Hora</label>
                            <input type="time" class="form-control" id="txtHora" name="name" value="@DateTime.Now.ToString("HH:mm")" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="CambiarEstadoEntregaUniforme()" id="btnGenerar">Generar</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>


