
@{
    ViewBag.Title = "EntregaUniforme";
}
<style>
    input, select, textarea {
        max-width: 100%
    }
</style>

<h5>Entrega Uniforme</h5>

<div class="" style="padding-bottom:5%">

    <br />
    <div class="row">

        <div class="col-md-4 col-sm-6 col-6">
            <div class="form-group">
                <label>Fecha</label>
                <input type="date" class="form-control" id="txtFecha" name="name" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
            </div>
        </div>
        <div class="col-md-4 col-sm-12">
            <div class="form-group">
                <label>Linea</label>
                @Html.DropDownList("selectLinea", new SelectList(ViewBag.Lineas, "Codigo", "Descripcion"), "seleccione", new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group col-md-4 col-sm-12">
            <label>Empleado</label>
            <div class="input-group">
                @Html.TextBox("NombreEmpleado", null, new { style = "width: 65%;", @readonly = "readonly" })
                @Html.Hidden("Identificacion")
                <button type="button" onclick="CargarEmpleados();" id="CargarEmpleadoPG">
                    <img src="~/Content/images/buscar.png" />
                </button>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col text-center">
            <button data-toggle="tooltip" data-placement="top" title="Agregar" class="btn" id="" onclick="AgregarEntregaUniforme()" style="border-color:#2c3e50" type="button">
                <img style="width:100%" src="~/Content/icons/add24-2.png" />
            </button>

        </div>
    </div>

    <hr />
    <div id="spinnerCargando" hidden class="text-center">
        <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
            <span class="sr-only">Cargando...</span>
        </div>
    </div>

    <div class="table-responsive" style="padding-bottom:5%" id="divEntregaUniforme">

    </div>


</div>




<div class="modal" tabindex="-1" id="ModalEntregaUniforme" role="dialog" data-backdrop="static">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Entrega de Uniforme</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">                   
                    <div class="col-md-12 col-12 col-sm-12">
                        <div class="form-group">
                            <label>Hora</label>
                            <input type="time" class="form-control" id="txtHora" name="name" value="@DateTime.Now.ToString("HH:mm")" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="GenerarEntregaUniforme()" id="btnGenerar">Generar</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>



<div id="ModelCargarEmpleados"></div>
<br /><br />

<script src="~/Scripts/SolicitudPermiso/Empleado.js"></script>