@model IEnumerable<Asiservy.Automatizacion.Formularios.Models.Asistencia.ControlCuchilloViewModel>

@{
    ViewBag.Title = "ControlCuchillo";
}

<h4>ControlCuchillo</h4>
<label>@ViewBag.Linea</label>
<hr />
<div class=" container-fluid">
    <div class="row">
        <div class="col-4">
            <div class="form-group">
                <label>Fecha</label>
                <input type="date" class="form-control" id="txtFecha" name="name" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
            </div>
        </div>
        <div class="col-4">
            <div class="form-group">
                <label>Estado</label>
                @Html.DropDownList("EstadoControlCuchillo", new SelectList(ViewBag.EstadosControlCuchillo, "Codigo", "Descripcion"), "seleccione", new { @class = "form-control", @onchange = "SelectEstado(this.value)", @id = "EstadoControlCuchillo" })
            </div>
        </div>
    </div>
    <hr />
    <div id="spinnerCargando" hidden class="text-center">
        <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
            <span class="sr-only">Cargando...</span>
        </div>
    </div>
    <div class="table-responsive" id="TablaControlCuchillo">

    </div>
</div>


<link href="~/Content/AsistenciaCss/Asistencia.css" rel="stylesheet" />


<link href="~/Content/DataTables/media/css/dataTables.bootstrap.css" rel="stylesheet" />
<link href="~/Content/DataTables/media/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
<link href="~/Content/DataTables/extensions/Buttons/css/buttons.bootstrap4.min.css" rel="stylesheet" />
<link href="~/Content/DataTables/extensions/Buttons/css/buttons.dataTables.min.css" rel="stylesheet" />
<script src="~/Scripts/DataTables/media/js/jquery.dataTables.min.js"></script>
<script src="~/Scripts/DataTables/media/js/dataTables.bootstrap4.min.js"></script>.

