@model IEnumerable<Asiservy.Automatizacion.Formularios.Models.Asistencia.ControlCuchilloViewModel>

@{
    ViewBag.Title = "ControlCuchillo";
}

<h4>Control de Cuchillos</h4>
<label>@ViewBag.Linea</label>
<hr />
<div class=" container-fluid">
    <div class="row">
        <div class="col-md-4 col-12">
            <div class="form-group">
                <label>Fecha</label>
                <input type="date" class="form-control" id="txtFecha" name="name" value="@DateTime.Now.ToString("yyyy-MM-dd")"  onchange = "SelectEstado('')"/>
            </div>
        </div>
        <div class="col-md-4 col-12">
            <div class="form-group">
                <label>Estado</label>
                @Html.DropDownList("EstadoControlCuchillo", new SelectList(ViewBag.EstadosControlCuchillo, "Codigo", "Descripcion"), "seleccione", new { @class = "form-control", @onchange = "SelectEstado(this.value)", @id = "EstadoControlCuchillo" })
            </div>
        </div>
    </div>
    <hr />
    <div id="spinnerCargando" hidden class="text-center">
        <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
            <span class="sr-only">Cargando...</span>
        </div>
    </div>
    <div class="table-responsive" id="TablaControlCuchillo">

    </div>
</div>


<link href="~/Content/AsistenciaCss/Asistencia.css" rel="stylesheet" />
