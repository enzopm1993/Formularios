@model IEnumerable<Asiservy.Automatizacion.Formularios.Models.Asistencia.ControlCuchilloViewModel>


<table class="table" style="width:100%" id="TableControlCuchilloPartial">
    <thead>
        <tr>
            <th>Id</th>
            <th>Empleado</th>
            <td>
                <div class="text-center">

                    <img class="imageCuchillo img-fluid" src="~/Content/images/cuchillo03.jpg" />
                </div>
            </td>
            <td>
                <div class="text-center">
                    <img class="imageCuchillo img-fluid" src="~/Content/images/cuchillo01.jpg" />
                </div>
            </td>
            <td>
                <div class="text-center">

                    <img class="imageCuchillo img-fluid" src="~/Content/images/cuchillo02.jpg" />
                </div>
            </td>

        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var x in Model)
            {
                <tr>
                    <td>@x.Cedula</td>
                    <td>@x.Nombre</td>
                    <td class="text-center">
                        @if (x.CuchilloBlanco != 0)
                        {
                            <div class="col-xs-2 text-xs-center">
                                <label class="btn btn-dark text-xs-center" id="labelCuchilloBlanco_@x.CuchilloBlanco">
                                    @x.CuchilloBlanco
                                    @Html.CheckBox("Blanco" + x.CuchilloBlanco, x.ValidaBlanco == "1", new { @onchange = "check(this.id,'B',"+x.Cedula+")" })
                                </label>
                            </div>
                            if (x.ValidaBlanco == "1") {
                                <script>
                                    $("#labelCuchilloBlanco_@x.CuchilloBlanco").css("background", "#28B463");
                                </script>
                            }

                        }
                        else
                        {
                            <div class="col-xs-2 text-xs-center">
                                <label class="btn btn-dark text-xs-center" id="labelCuchilloBlanco_@x.CuchilloBlanco">
                                    @x.CuchilloBlanco
                                    @Html.CheckBox("Blanco" + x.CuchilloBlanco, false, new { @disabled = "disabled" })
                                </label>
                            </div>

                        }


                    </td>
                    <td class="text-center">
                        @if (x.CuchilloRojo != 0)
                        {
                            <div class="col-xs-2 text-xs-center">
                                <label class="btn btn-dark text-xs-center" id="labelCuchilloRojo_@x.CuchilloRojo">
                                    @x.CuchilloRojo
                                    @Html.CheckBox("Rojo" + x.CuchilloRojo, x.ValidaRojo == "1", new { @onchange = "check(this.id,'R'," + x.Cedula + ")" })
                                </label>
                            </div>
                            if (x.ValidaRojo == "1")
                            {
                                <script>
                                    $("#labelCuchilloRojo_@x.CuchilloRojo").css("background", "#28B463");
                                </script>
                            }
                        }
                        else
                        {
                            <div class="col-xs-2 text-xs-center">
                                <label class="btn btn-dark text-xs-center" id="labelCuchilloRojo_@x.CuchilloRojo">
                                    @x.CuchilloRojo
                                    @Html.CheckBox("Rojo" + x.CuchilloRojo, false, new { @disabled = "disabled" })
                                </label>
                            </div>
                        }
                    </td>
                    <td class="text-center">
                        @if (x.CuchilloNegro != 0)
                        {
                            <div class="col-xs-2 text-xs-center">
                                <label class="btn btn-dark text-xs-center" id="labelCuchilloNegro_@x.CuchilloNegro">
                                    @x.CuchilloNegro
                                    @Html.CheckBox("Negro" + x.CuchilloNegro, x.ValidaNegro == "1", new { @onchange = "check(this.id,'N'," + x.Cedula + ")" })
                                </label>
                            </div>
                            if (x.ValidaNegro == "1")
                            {
                                <script>
                                    $("#labelCuchilloNegro_@x.CuchilloNegro").css("background", "#28B463");
                                </script>
                            }
                        }
                        else
                        {
                            <div class="col-xs-2 text-xs-center">
                                <label class="btn btn-dark text-xs-center" id="labelCuchilloNegro_@x.CuchilloNegro">
                                    @x.CuchilloNegro
                                    @Html.CheckBox("Negro" + x.CuchilloNegro, false, new { @disabled = "disabled" })
                                </label>
                            </div>
                        }
                    </td>
                </tr>
            }
        }
    </tbody>
</table>





<script>

    $('#TableControlCuchilloPartial').DataTable({
        "language": {
            "sProcessing": "Procesando...",
            "sLengthMenu": "Mostrar _MENU_ registros",
            "sZeroRecords": "No se encontraron resultados",
            "sEmptyTable": "Ningún dato disponible en esta tabla",
            "sInfo": "Mostrando registros del _START_ al _END_ de un total de _TOTAL_ registros",
            "sInfoEmpty": "Mostrando registros del 0 al 0 de un total de 0 registros",
            "sInfoFiltered": "(filtrado de un total de _MAX_ registros)",
            "sInfoPostFix": "",
            "sSearch": "Buscar:",
            "sUrl": "",
            "sInfoThousands": ",",
            "sLoadingRecords": "Cargando...",
            "oPaginate": {
                "sFirst": "Primero",
                "sLast": "Último",
                "sNext": "Siguiente",
                "sPrevious": "Anterior"
            },
            "oAria": {
                "sSortAscending": ": Activar para ordenar la columna de manera ascendente",
                "sSortDescending": ": Activar para ordenar la columna de manera descendente"
            }
        },
       
      
        "paging": false,
        "ordering": false,
        "info": false

    });
</script>