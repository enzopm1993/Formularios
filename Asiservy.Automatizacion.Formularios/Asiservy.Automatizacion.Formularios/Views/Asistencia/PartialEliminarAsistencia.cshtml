@model List<Asiservy.Automatizacion.Datos.Datos.spConsultarAsistenciasGeneradas>
@using Newtonsoft.Json

@if (Model.Count == 0)
{
<div class="card text-dark">
    <div class="card-body">
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <center><h4 class="text-warning">No existen registros para mostrar</h4></center>
            </div>
        </div>

    </div>
</div>
}
else
{
<div class="card text-dark">
    <div class="card-body">
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr class="text-center">
                            <th>
                                Línea
                            </th>
                            <th>
                                Turno
                            </th>
                            <th>
                                Tipo Asistencia
                            </th>
                            <th>
                                Acción
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            string json = JsonConvert.SerializeObject(item);
                            string tipo = item.Generado == "PRO" ? "PROCESOS" : item.Generado == "PRE" ? "PRESTADO" : "GENERAL";
                            <tr class="text-center">
                                <td>
                                    @item.Linea
                                </td>
                                <th>
                                    @item.Turno
                                </th>
                                <td>
                                    @tipo
                                </td>
                                <td>
                                    <i class="fas fa-trash-alt" style="color:red;cursor:pointer" onclick="ConfirmarEliminarRegistro(@json)"></i>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>
}
