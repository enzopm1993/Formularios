            <td>
                @Html.DisplayFor(modelItem => item.CuchilloBlanco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CuchilloRojo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CuchilloNegro)
            </td>
