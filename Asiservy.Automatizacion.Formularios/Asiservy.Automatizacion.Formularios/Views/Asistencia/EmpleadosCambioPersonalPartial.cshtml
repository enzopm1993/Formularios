@model IEnumerable<Asiservy.Automatizacion.Datos.Datos.spConsutaEmpleadosFiltro>

<table id="TablaEmpleadosCambioP" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th></th>
            <th>Cédula</th>
            <th>Nombre</th>
            <th>Línea</th>
            <th>Área</th>
            <th>Cargo</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td><input type="checkbox" id="Empleado-@item.CEDULA"/></td>
            <td>@item.CEDULA</td>
            <td>@item.NOMBRES</td>
            <td>@item.LINEA</td>
            <td>@item.AREA</td>
            <td>@item.CARGO</td>
        </tr>
        }
    </tbody>
</table>
<script>
    //dataTable Buscar Empleados
    $('#TablaEmpleadosCambioP').DataTable({
        "language": {
            "sProcessing": "Procesando...",
            "sLengthMenu": "Mostrar _MENU_ registros",
