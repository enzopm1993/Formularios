@model IEnumerable<Asiservy.Automatizacion.Datos.Datos.CC_HIGIENE_COMEDOR_COCINA_CTRL>
@using Newtonsoft.Json;
<table class="table table-bordered table-hover" id="tblDataTable">
    <thead style="font-size:14px">
        <tr>
            <th>
                FECHA
            </th>
            <th>
                HORA
            </th>
            <th>
                OBSERVACION
            </th>
            <th>
               FECHA CREACION
            </th>
            <th>
                USUARIO CREACION
            </th>
            <th>
                ESTADO
            </th>
        </tr>
    </thead>
    <tbody style="font-size:13px">
        @foreach (var item in Model)
        {
            var json = JsonConvert.SerializeObject(item);
            <tr onclick="SeleccionarBandeja(@json)">               
                <td >
                    @item.Fecha.ToString("dd-MM-yyyy")
                </td>
                <td>
                    @item.Hora.ToString("HH:mm")
                </td>               
                <td>
                    @item.Observacion
                </td>                
                <td>
                    @item.FechaIngresoLog.ToString("dd-MM-yyyy")
                </td>
                <td>
                    @item.UsuarioIngresoLog
                </td>                
                <td>
                    @if (item.EstadoReporte==true)
                    {
                        <span class="badge badge-success">APROBADO</span>
                    }
                    else
                    {
                        <span class="badge badge-danger">PENDIENTE</span>
                    }                   
                </td>
            </tr>
        }
    </tbody>
</table>

