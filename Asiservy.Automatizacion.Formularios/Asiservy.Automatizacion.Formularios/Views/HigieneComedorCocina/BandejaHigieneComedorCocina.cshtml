@model Asiservy.Automatizacion.Datos.Datos.CC_HIGIENE_COMEDOR_COCINA_CTRL

@{
    ViewBag.Title = "BandejaHigieneComedorCocina";
}

<style>
    input, select, textarea {
        max-width: 100%;
    }

    .selectbox {
        background: #fff;
        color: #1d3b4a;
        padding: 5px 8px;
        line-height: 18px;
        border-radius: 4px;
        border-width: 0 1px 4px;
        cursor: pointer;
        border: 1px solid #ddd;
    }

    .box_filters {
        float: right;
    }

    .itemFilter {
        float: left;
        margin-right: 4px;
    }

    .btnWait {
        cursor: no-drop !important;
    }

    ._bloque {
        margin-bottom: 10px;
    }

    .card {
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        transition: 0.3s;
        width: 100%;
        padding-top: 10px;
        padding-bottom: 10px;
        padding-left: 10px;
        padding-right: 10px;
    }

    fieldset {
        border: 1px solid #ddd !important;
        margin: 0;
        xmin-width: 0;
        padding: 10px;
        position: relative;
        border-radius: 4px;
        background-color: #f5f5f5;
        padding-left: 10px !important;
    }

    legend {
        font-size: 14px;
        font-weight: bold;
        margin-bottom: 0px;
        /*width: 35%;*/
        border: 1px solid #ddd;
        border-radius: 4px;
        padding: 5px 5px 5px 10px;
        background-color: #ffffff;
    }

    #lgnprod {
        width: 25%;
    }

    #lgndestino {
        width: 60%;
    }

    canvas {
        border: 1px solid black;
    }

    #ImgFirma {
        border: 1px solid black;
    }
</style>

<div class="row">
    <div class="col-md-6 col-12 col-sm-12">
        <h4 class="text-md-left text-center" style="float:left">Bandeja Higiene de Comedor y Cocina</h4>
    </div>
    <div class="col-md-6 col-12 col-sm-12">
        <div class="box_filters" style="padding-right:7.6%;width:62%">
            <div class="itemFilter">

                @*<div id="reportrange" class="selectbox">*@
                <select id="selectEstadoReporte" style=" float:right" class="form-control" onchange="CargarBandeja()">
                    <option value="false" default>PENDIENTE APROBACION&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</option>
                    <option value="true">APROBADO</option>
                </select>
                @*</div>*@
            </div>

        </div>
    </div>
</div>

<div class="row float-right">
    <div class="">
        <div class="box_filters col-md-12 col-12 col-sm-12">
            <div class="itemFilter">
                <input type="hidden" id="fechaDesde" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                <input type="hidden" id="fechaHasta" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                <div id="reportrange" class="selectbox text-md-left text-center">
                    <i class="fa fa-calendar"></i>&nbsp;
                    <span></span> <i class="fa fa-caret-down"></i>
                </div>
            </div>
            <div class="itemFilter">
                <a href="#" onclick="CargarBandeja()" id="btnModalGenerarRegistro" class="btn btn-primary btn-sm"><i id="iconSearch" class="fas fa-search"></i></a>
            </div>
        </div>
    </div>
</div>

<br /><br /><br /><br />
@* DIV MOSTRAR PARTIALVIEW *@
<div class="table-responsive" id="divTablaAprobados">
   
</div>

@* MODAL APRUEBA CONTROL*@
<div class="modal fade" id="ModalApruebaPendiente" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Aprobar</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="table-responsive" id="divAprobarPendientePartial">

                </div>
            </div>
            @* FIRMA DIGITAL *@

            <div class="card" id="firmaDigital">
                <div id="signature-pad" class="align-self-md-center align-self-sm-center" hidden>
                    <button type="button" class="btn" data-action="clear" style="border-color:#2c3e50"><img style="width:100%" src="~/Content/icons/clear24.png" /></button>

                    <div>
                        <canvas width=400 height=200 id="firmacanvas"></canvas>
                    </div>
                    <div>
                        <center> <button type="button" class="btn btn-primary" id="btnGuardarFirma" onclick="GuardarFirma()">Guardar Firma</button></center>
                    </div>
                </div>
                <div id="div_ImagenFirma" class="align-self-md-center align-self-sm-center" hidden>


                    <img id="ImgFirma" width="400" height="200" src="" />
                    <div>
                        <center> <button type="button" class="btn btn-primary" id="btnActualizarFirma" onclick="VolverAFirmar()">Rehacer Firma</button></center>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                <button type="button" id="btnAprobado" hidden class="btn btn-primary" onclick="AprobarPendiente(true)">Aprobar</button>
                <button type="button" id="btnPendiente" hidden class="btn btn-primary" onclick="AprobarPendiente(false)">Reversar</button>
            </div>
        </div>
    </div>
</div>