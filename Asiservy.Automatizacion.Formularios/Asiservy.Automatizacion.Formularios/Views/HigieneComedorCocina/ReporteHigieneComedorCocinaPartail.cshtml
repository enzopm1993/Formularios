@model IEnumerable<Asiservy.Automatizacion.Datos.Datos.sp_Control_Higine_Comedor_Cocina>


<table class="table table-bordered">
    <thead style="font-size:11px">
        <tr>           
            <th>
                CATEGORIA
            </th>
            <th>
                NOMBRE
            </th>
            <th>
                ESTADO LIMPIEZA
            </th>
            <th>
                OBSERVACIONES
            </th>
            <th>
                ACCION CORRECTIVA
            </th>
            @*<th>
                APROBADO POR
            </th>*@
            @*<th>
                    FECHA APROBADO
                </th>*@
            
        </tr>
    </thead>
    <tbody style="font-size:10px">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Categoria.ToUpper()
                </td>
                <td>
                    @item.Nombre.ToUpper()
                </td>
                <td>
                    @item.LimpiezaEstado
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.Observacion))
                    {
                        @item.Observacion.ToUpper()
                    }
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.AccionCorrectiva))
                    {
                        @item.AccionCorrectiva.ToUpper()
                    }
                </td>
                @*<td>
                    @if (!string.IsNullOrEmpty(item.AprobadoPor))
                    {
                        @item.AprobadoPor.ToUpper()
                    }
                </td>*@
                @*<td>
                        @{ DateTime date = Convert.ToDateTime(item.FechaAprobado);}
                        @if (date.ToString() != "1/1/0001 12:00:00 AM")
                        {
                            @date.ToString("dd-MM-yyyy")
                        }
                    </td>*@
                @*<td>
                    @if (item.EstadoReporte == true)
                    {
                        <span class="badge badge-success">APROBADO</span>
                    }
                    else
                    {
                        <span class="badge badge-danger">PENDIENTE</span>
                    }
                </td>*@
            </tr>
        }
    </tbody>
</table>
