@model IEnumerable<Asiservy.Automatizacion.Datos.Datos.CC_HIGIENE_COMEDOR_COCINA_MANT>
@using Newtonsoft.Json;

@{ var json = JsonConvert.SerializeObject(Model);}

<table class="table" id="tblDataTableDetalle">
    <thead style="font-size:12px">
        <tr>
            <th hidden>
                IdControlDetalle
            </th>
            <th>
                NOMBRE
            </th>
            <th>
                CATEGORIA
            </th>
            <th>
                ESTADO
            </th>
            <th>
                OBSERVACION
            </th>
            <th>
                ACCION CORRECTIVA
            </th>
        </tr>
    </thead>
    <tbody style="font-size:12px">
        @foreach (var item in Model)
        {
            <tr>
                <td hidden>
                    <input type="text" name="name" style="font-size: 10px;width:330px" id="txtIdControlDetalle-@item.IdMantenimiento" class="form-control" />
                </td>
                <td>
                    @item.Nombre.ToUpper()
                </td>
                <td>
                    @item.Categoria.ToUpper()
                </td>
                <td>
                    <select style="width:150px" id="selectLimpiezaEstado-@item.IdMantenimiento" class="form-control" onchange="OnChangeTextBox()">
                        <option value="S" selected>SATISFACTORIO</option>
                        <option value="NS">NO SATISFACTORIO</option>
                        <option value="N/A">N/A</option>
                    </select>
                </td>
                <td>
                    <input type="text" name="name" value="" style="font-size: 10px;width:300px" id="txtObservacionDetalle-@item.IdMantenimiento" class="form-control" />
                </td>
                <td>
                    <input type="text" name="name" value="" style="font-size: 10px;width:300px" id="txtACorrectivaDetalle-@item.IdMantenimiento" class="form-control" />
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="modal-footer">
    <button type="button" class="btn btn-primary" onclick="GuardarDetalle(@json)" id="btnGenerarControlRegistroDetalle">Guardar</button>
    <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="LimpiarDetalle()">Cancelar</button>
</div>
