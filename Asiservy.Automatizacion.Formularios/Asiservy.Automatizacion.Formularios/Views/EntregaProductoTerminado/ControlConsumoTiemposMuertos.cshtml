@model IEnumerable<Asiservy.Automatizacion.Datos.Datos.spConsultaProductoTerminadoTiempoPara>
@using Newtonsoft.Json;

<table class="table">
    <tr>
      
        <th>
           Hora Inicio
        </th>
        <th>
          Hora Fin
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Causa)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>            
            <td>
                @item.HoraInicio.ToString("HH:mm")
            </td>
            <td>
                @item.HoraFin.ToString("HH:mm")
                
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Causa)
            </td>
            <td>
                @{string json = JsonConvert.SerializeObject(item); }
                <button class="btn btn-link" onclick="EditarConsumoTiemposMuertos(@json)">Editar</button>
                |
                <button class="btn btn-link" onclick="EliminarConsumoTiemposMuertos(@json)">Eliminar</button>
            </td>
        </tr>
    }

</table>
