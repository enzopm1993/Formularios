
@{
    ViewBag.Title = "EntregaProductoTerminado";
}

<h4>Bandeja Control Calidad</h4>
<style>
    input, select, textarea {
        max-width: 100%;
    }
</style>

<div class="row">
    <div class="col-md-4">
        <label>Fecha Paletizado</label>
        <input type="date" class="form-control" id="txtFechaPaletizado" onchange="CargarProductoTerminado()" name="name" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
    </div>
</div>


<hr />

<div id="divCabecera2" hidden>
    <div class="card shadow">
        <div class="card-body">
            <div id="chartCabecera2" class="table-responsive"></div>
        </div>
    </div>
</div>



<!-- Modal -->
<div class="modal fade" id="ModalApruebaProductoTerminado" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Entrega de Producto Terminado</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-4">
                        <label>O. Fabricación</label>
                        <input type="text" readonly id="txtOrdenFrabricacion" name="name" class="form-control" value="" />
                    </div>
                    <div class="col-md-8">
                        <label>Producto</label>
                        <input type="text" readonly id="txtProducto" class="form-control" name="name" value="" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary">Aprobar</button>
            </div>
        </div>
    </div>
</div>

