@model IEnumerable<Asiservy.Automatizacion.Datos.Datos.spConsultaProductoTerminadoDaniados>
@using Newtonsoft.Json;

<table class="table table-striped">

    <tr>      
        <th>
            @Html.DisplayNameFor(model => model.Merma)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cantidad)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
           
            <td>
                @Html.DisplayFor(modelItem => item.Merma)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @{string json = JsonConvert.SerializeObject(item); }
                <button class="btn btn-link" onclick="EditarConsumoDaniado(@json)">Editar</button>
                |
                <button class="btn btn-link" onclick="EliminarConsumoDaniado(@json)">Eliminar</button>
            </td>
        </tr>
    }

</table>
