@model IEnumerable<Asiservy.Automatizacion.Datos.Datos.spConsultaProductoTerminadoDetalle>
@using Newtonsoft.Json;
@using Asiservy.Automatizacion.Datos.Datos



@{ var poTurno = (List<CLASIFICADOR>)ViewBag.Turno;}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Turno)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Personal)
        </th>
        <th>
            Hora Inicio
        </th>
        <th>
            Hora Fin
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @{
                    var T = poTurno.FirstOrDefault(x => x.Codigo == item.Turno);
                    if (T != null)
                    {
                        @T.Descripcion
                    }
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Personal)
            </td>
            <td>
                @item.HoraInicio.ToString("yyyy-MM-dd HH:mm")
            </td>
            <td>
                @item.HoraFin.ToString("yyyy-MM-dd HH:mm")
            </td>
            <td>
                @{string json = JsonConvert.SerializeObject(item); }
                <button class="btn btn-link" onclick="EditarConsumoInsumoDetalle(@json)">Editar</button>
                |
                <button class="btn btn-link" onclick="EliminarProcesoConsumoInsumoDetalle(@json)">Eliminar</button>

            </td>
        </tr>
    }

</table>
