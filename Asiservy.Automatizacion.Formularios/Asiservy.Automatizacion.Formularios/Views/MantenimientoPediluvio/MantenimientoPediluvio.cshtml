
@{
    ViewBag.Title = "MantenimientoPediluvio";
}

<h2>Mantenimiento de Pediluvio</h2>


<style>
    input, select, textarea {
        max-width: 100%;
    }
</style>

<hr />
<div class="row" id="divCabecera1">
    <div id="divDescripcion" class="col-md-1 col-6 col-sm-6">
        <div class="form-group">
            <label>Id</label>
            <input type="number" name="name" disabled value="0" autocomplete="off" id="txtIdMantenimientoPediluvio" class="form-control" />
        </div>
    </div>
    <div class="col-md-2 col-6 col-sm-6">
        <label>Area</label>
        @if (ViewBag.AreasPeliduvio != null)
        {
            @Html.DropDownList("selectArea", new SelectList(ViewBag.AreasPeliduvio, "Codigo", "Descripcion"), "Seleccione", new { @class = "form-control",@onchange="CargarCabecera()" })
        }
        else
        {
            <select>
                <option value="">Sin registros en el clasificador</option>
            </select>
        }
    </div>
    <div id="divDescripcion" class="col-md-5 col-6 col-sm-6">
        <div class="form-group">
            <label>Descripción del Pediluvio</label>
            <input type="text" name="name" value="" autocomplete="off" id="txtDescripcion" class="form-control" />
        </div>
    </div>



    <div class="col-md-2 col-12  text-md-left text-center">
        <label class="" id="lblAcciones">Acciones</label>
        <div class="form-group">
            <button data-toggle="tooltip" data-placement="top" title="Crear nuevo registro" class="btn" id="btnModalGenerarRegistro" onclick="GuardarCabecera()" style="border-color:#2c3e50" type="button">
                <img style="width:100%" src="~/Content/icons/add24.png" />
            </button>
            <button data-toggle="tooltip" data-placement="top" title="Limpiar" class="btn" id="btnLimpiar" onclick="Limpiar()" style="border-color:#2c3e50" type="button">
                <img style="width:100%" src="~/Content/icons/clear24.png" />
            </button>
        </div>
    </div>

</div>
<hr />

@*MODAL BOTON DETALLE DE HORAS*@
<div class="text-center">
    <h4 id="hMensaje" class="text-warning"></h4>
</div>
<div id="divMantenimientoPediluvio" class="table-responsive">
</div>

@*MODAL ELIMINAR REGISTRO*@
<div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true" id="modalEliminarControl">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel"></h4>
                <input type="hidden" id="txtEliminarDetalle" name="name" value="" />
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-danger" onclick="EliminarCabeceraSi()" id="modal-detalle-si">Si</button>
                <button type="button" class="btn btn-outline-primary" onclick="EliminarCabeceraNo()" id="modal-detalle-no">No</button>
            </div>
        </div>
    </div>
</div>

