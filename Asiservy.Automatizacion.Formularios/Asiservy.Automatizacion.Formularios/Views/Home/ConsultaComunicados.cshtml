@model IEnumerable<Asiservy.Automatizacion.Formularios.AccesoDatos.App.Comunicados>
@using Newtonsoft.Json;


<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Asunto)
            </th>
            <th>
                Fecha
            </th>
            <th>
                Categoria
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            string json = JsonConvert.SerializeObject(item.Contenido);
            <tr onclick="SeleccionarComunicado(@json)">
                <td>
                    @Html.DisplayFor(modelItem => item.Asunto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaComunicado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreCategoria)
                </td>

            </tr>
        }
    </tbody>
</table>
