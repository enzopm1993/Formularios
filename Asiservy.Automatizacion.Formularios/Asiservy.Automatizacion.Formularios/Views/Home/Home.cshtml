
@{
    ViewBag.Title = "Home";
}

<style>
    div.relativeContenido {
        position: relative;
        width: 400px;
        height: 200px;
        border: 3px solid #73AD21;
    }

    div.absoluteMensajes {
        position: absolute;
        top: 10px;
        right: 5px;
        left:1%;
        width: 100%;
        height: 100px;
        
    }
   
</style>


<div class="text-center relative" >
    <div class="absoluteMensajes">
        @{
            if (ViewBag.MensajeUrgente != null)
            {
                <div class="alert alert-danger  alert-dismissible fade show" role="alert">
                    <strong>Urgente!</strong> @ViewBag.MensajeUrgente
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }


            if (ViewBag.MensajesNotificaciones != null)
            {
                foreach (var mensaje in ViewBag.MensajesNotificaciones)
                {
                    <div class="alert alert-warning    alert-dismissible fade show" role="alert">
                        <strong>Bienvenido!</strong> @mensaje
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                }

            }

            if (ViewBag.MensajeAviso != null)
            {
                <div class="alert alert-dark  alert-dismissible fade show" role="alert">
                    <strong>Aviso!</strong> @ViewBag.MensajeAviso
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }
        }
    </div>

    <div style="padding-top:10%"> <img style="width:25%" src="~/Content/images/logo1.png" /></div>

</div>








